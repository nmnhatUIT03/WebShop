@model string
@{
    ViewData["Title"] = "Quên Mật Khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container py-5">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col col-xl-10">
                <div class="card">
                    <div class="row g-0">
                        <div class="col-md-5 col-lg-6 d-flex align-items-center">
                            <div class="card-body text-black">
                                <form asp-action="ForgotPassword">
                                    <div class="header-section">
                                        <span class="h1">QUÊN MẬT KHẨU</span>
                                        <h5 class="sub-title">Nhập email để nhận mật khẩu mới</h5>
                                    </div>
                                    <div class="form-outline">
                                        <input type="email" name="email" placeholder="Nhập Email" class="form-control" required />
                                    </div>
                                    <div class="pt-1">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Gửi</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>