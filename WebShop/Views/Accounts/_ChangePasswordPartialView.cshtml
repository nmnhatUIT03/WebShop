@model WebShop.ModelViews.ChangePasswordViewModel
<div class="myaccount-details" style="background: #F5F7FA; padding: 20px; border-radius: 10px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); width: 100%; color: #2E4057;">
    <form asp-controller="Accounts" asp-action="ChangePassword" method="post" class="myaccount-form" style="display: flex; flex-direction: column; gap: 15px;">
        <div class="myaccount-form-inner" style="background: #FFFFFF; padding: 20px; border-radius: 8px; border: 1px solid #D3E0EA;">
            <div class="single-input mb-4">
                <label style="font-weight: 500; margin-bottom: 8px; display: block; color: #2E4057;">
                    Mật khẩu hiện tại *
                </label>
                <input asp-for="PasswordNow" type="password" class="form-control" placeholder="Nhập mật khẩu hiện tại" style="width: 100%; padding: 10px; border: 1px solid #D3E0EA; border-radius: 6px; box-sizing: border-box; background: #F9FBFC; color: #2E4057; font-size: 14px; transition: border-color 0.3s;">
                <span asp-validation-for="PasswordNow" class="text-danger"></span>
            </div>
            <div class="single-input mb-4">
                <label style="font-weight: 500; margin-bottom: 8px; display: block; color: #2E4057;">
                    Mật khẩu mới *
                </label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu mới" style="width: 100%; padding: 10px; border: 1px solid #D3E0EA; border-radius: 6px; box-sizing: border-box; background: #F9FBFC; color: #2E4057; font-size: 14px; transition: border-color 0.3s;">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="single-input mb-4">
                <label style="font-weight: 500; margin-bottom: 8px; display: block; color: #2E4057;">
                    Nhập lại mật khẩu *
                </label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" style="width: 100%; padding: 10px; border: 1px solid #D3E0EA; border-radius: 6px; box-sizing: border-box; background: #F9FBFC; color: #2E4057; font-size: 14px; transition: border-color 0.3s;">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="single-input mb-4">
                <button type="submit" class="btn btn-info btn-block" style="width: 100%; padding: 12px; background-color: #FF6200; color: #FFFFFF; border: none; border-radius: 6px; font-size: 16px; font-weight: 500; transition: background-color 0.3s; cursor: pointer;">
                    Đổi mật khẩu
                </button>
            </div>
        </div>
    </form>
</div>

<style>
    .form-control:focus {
        border-color: #FF6200;
        outline: none;
        box-shadow: 0 0 5px rgba(255, 98, 0, 0.2);
    }

    .btn-info:hover {
        background-color: #CC4D00;
    }
</style>