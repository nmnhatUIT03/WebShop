<style>
    /* Global Vietnamese Font Support - Using Roboto */
    .shop-details,
    .shop-details * {
        font-family: 'Roboto', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .shop-details h1,
    .shop-details h2,
    .shop-details h3,
    .shop-details h4,
    .shop-details h5,
    .shop-details h6 {
        font-family: 'Playfair Display', 'Roboto', serif;
    }

    /* Shop Details Section */
    .shop-details {
        background: #FFFFFF;
        padding: 30px 0;
        position: relative;
    }

    .container-fluid {
        padding-left: 20px;
        padding-right: 20px;
        max-width: 1400px;
        margin-left: auto;
        margin-right: auto;
    }

    .product__details__pic__main {
        margin-left: 0;
        text-align: center;
        position: relative;
    }

        .product__details__pic__main img:hover {
            transform: scale(1.05);
        }

    /* Thumbnail magnifier */
    .thumb-magnifier {
        position: absolute;
        z-index: 100;
        width: 200px;
        height: 200px;
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        overflow: hidden;
        background: #ffffff;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        display: none;
        pointer-events: none;
    }

        .thumb-magnifier img {
            width: 140%;
            height: auto;
            object-fit: cover;
            transform: translate(-10%, -10%);
        }

    .product__details__pic__thumbs .nav-link.active img {
        border-color: #e64500;
        opacity: 1;
    }

    .product__details__pic__thumbs .nav-link img:hover {
        border-color: #e64500;
        opacity: 1;
    }

    .product__details__text {
        transition: box-shadow 0.4s ease;
    }

    /* Align Size & Color block nicely to the left */
    .product__details__option {
        justify-content: flex-start;
        text-align: left;
    }

    .product__details__option__size,
    .product__details__option__color {
        text-align: left;
    }

        .product__details__option__size > span:first-child,
        .product__details__option__color > span:first-child {
            letter-spacing: 0.5px;
        }

    /* Button Styles */
    .btn-custom-dark {
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        border: none;
        outline: none;
    }

        .btn-custom-dark:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(230, 69, 0, 0.2);
        }

        .btn-custom-dark:active {
            transform: translateY(0) scale(0.98);
        }

    .btn-add-cart:hover {
        background: #d53f00 !important;
        box-shadow: 0 4px 16px rgba(230, 69, 0, 0.4);
        transform: translateY(-2px);
    }

    .btn-buy-now:hover {
        background: #1a1a1a !important;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.5);
        transform: translateY(-2px);
    }

    .btn-custom-dark::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn-custom-dark:hover::before {
        left: 100%;
    }

    .btn-custom-dark:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none !important;
    }

    .product__details__tab .nav-tabs .nav-link {
        border: none;
        border-bottom: 3px solid transparent;
        transition: border-color 0.3s ease;
    }

        .product__details__tab .nav-tabs .nav-link.active,
        .product__details__tab .nav-tabs .nav-link:hover {
            border-bottom: 3px solid #e64500;
            color: #e64500;
        }

    .related-products .product-item:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
    }

        .related-products .product-item:hover .product-img img {
            transform: scale(1.05);
        }

    /* Size and Color Selection Styles */
    .size-option:hover {
        border-color: #e64500 !important;
        background-color: #fff5f0 !important;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(230, 69, 0, 0.2);
    }

    .size-option.selected {
        border-color: #e64500 !important;
        background-color: #e64500 !important;
        color: #FFFFFF !important;
        font-weight: bold;
