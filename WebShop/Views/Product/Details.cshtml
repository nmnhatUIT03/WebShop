@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Toastr for notifications -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    
    <script>
        $(document).ready(function () {
            // Configure toastr
            if (typeof toastr !== 'undefined') {
                toastr.options = {
                    "closeButton": true,
                    "progressBar": true,
                    "positionClass": "toast-top-right",
                    "timeOut": "3000",
                    "extendedTimeOut": "1000",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                };
            }

            // Load ProductDetails into JavaScript
            var productDetails = @Html.Raw(productDetailsJson);
            var isLoggedIn = @Json.Serialize(isUserLoggedIn);
            var selectedSizeId = null;
            var selectedColorId = null;
            var selectedProductDetailId = null;
            var selectedSizeName = null;
            var selectedColorName = null;

            console.log('ProductDetails loaded:', productDetails);

            // Size selection functionality
            $('.size-option').on('click', function () {
                $('.size-option').removeClass('selected');
                $(this).addClass('selected');
                
                selectedSizeName = $(this).data('size');
                selectedSizeId = $(this).data('size-id');
                 
                console.log('Selected size:', selectedSizeName, 'SizeId:', selectedSizeId);
                updateSelectedProductDetail();
            });

            // Color selection functionality
            $('.color-option').on('click', function () {
                $('.color-option').removeClass('selected');
                $(this).addClass('selected');
                
                selectedColorId = $(this).data('color-id');
                selectedColorName = $(this).data('color-name');
                 
                console.log('Selected color:', selectedColorName, 'ColorId:', selectedColorId);
                updateSelectedProductDetail();
            });

            // Update ProductDetailId when size/color is selected
            function updateSelectedProductDetail() {
                selectedProductDetailId = null;
                
                if (selectedSizeId && selectedColorId) {
                    var match = productDetails.find(pd => 
                        parseInt(pd.SizeId) === parseInt(selectedSizeId) && 
                        parseInt(pd.ColorId) === parseInt(selectedColorId)
                    );
                    
                    if (match) {
                        selectedProductDetailId = match.ProductDetailId;
                        console.log('ProductDetailId found:', selectedProductDetailId, 'Stock:', match.Stock);
                        
                        if (match.Stock <= 0) {
                            toastr.warning('Biến thể này đã hết hàng!');
                        }
                    } else {
                        console.warn('ProductDetail not found for SizeId:', selectedSizeId, 'ColorId:', selectedColorId);
                        console.log('Available combinations:', productDetails.map(pd => ({ SizeId: pd.SizeId, ColorId: pd.ColorId })));
                    }
                }
            }

            // Add to cart handler
            $('.btn-add-cart').on('click', function (e) {
                e.preventDefault();
                
                if (!selectedSizeId) {
                    toastr.warning('Vui lòng chọn Kích cỡ!');
                    return;
                }
                if (!selectedColorId) {
                    toastr.warning('Vui lòng chọn Màu sắc!');
                    return;
                }
                if (!selectedProductDetailId) {
                    toastr.error('Biến thể này không tồn tại hoặc đã hết hàng!');
                    return;
                }
                
                if (!isLoggedIn) {
                    toastr.info('Vui lòng đăng nhập để thêm vào giỏ!');
                    var currentUrl = encodeURIComponent(window.location.pathname + window.location.search);
                    setTimeout(function() {
                        window.location.href = '/dang-nhap.html?returnUrl=' + currentUrl;
                    }, 800);
                    return;
                }
                
                var $button = $(this);
                var originalText = $button.html();
                $button.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> Đang thêm...');
                
                console.log('Adding to cart - ProductDetailId:', selectedProductDetailId);
                
                $.ajax({
                    url: '/api/cart/add',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        ProductDetailId: selectedProductDetailId,
                        Amount: 1
                    }),
                    success: function (response) {
                        if (response.success) {
                            toastr.success('Đã thêm vào giỏ hàng!');
                            if (response.cartCount) {
                                $('.cart-count').text(response.cartCount);
                            }
                        } else {
                            toastr.error(response.message || 'Có lỗi xảy ra!');
                        }
                        $button.prop('disabled', false).html(originalText);
                    },
                    error: function (xhr, status, error) {
                        console.error('Add to cart error:', error);
                        toastr.error('Lỗi kết nối! Vui lòng thử lại.');
                        $button.prop('disabled', false).html(originalText);
                    }
                });
            });

            // Buy now handler
            $('.btn-buy-now').on('click', function (e) {
                e.preventDefault();
                
                if (!selectedSizeId) {
                    toastr.warning('Vui lòng chọn Kích cỡ!');
                    return;
                }
                if (!selectedColorId) {
                    toastr.warning('Vui lòng chọn Màu sắc!');
                    return;
                }
                if (!selectedProductDetailId) {
                    toastr.error('Biến thể này không tồn tại hoặc đã hết hàng!');
                    return;
                }
                
                if (!isLoggedIn) {
                    toastr.info('Vui lòng đăng nhập để mua!');
                    var currentUrl = encodeURIComponent(window.location.pathname + window.location.search);
                    setTimeout(function() {
                        window.location.href = '/dang-nhap.html?returnUrl=' + currentUrl;
                    }, 800);
                    return;
                }
                
                var $button = $(this);
                var originalText = $button.html();
                $button.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> Đang xử lý...');
                
                console.log('Buy now - ProductDetailId:', selectedProductDetailId);
                
                $.ajax({
                    url: '/api/cart/buynow',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        ProductDetailId: selectedProductDetailId,
                        Amount: 1
                    }),
                    success: function (response) {
                        if (response.success) {
                            toastr.success('Đang chuyển đến thanh toán...');
                            setTimeout(function() {
                                window.location.href = '/checkout.html';
                            }, 500);
                        } else {
                            toastr.error(response.message || 'Có lỗi xảy ra!');
                            $button.prop('disabled', false).html(originalText);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Buy now error:', error);
                        toastr.error('Lỗi kết nối! Vui lòng thử lại.');
                        $button.prop('disabled', false).html(originalText);
                    }
                });
            });

            // Thumbnail hover & select + magnifier
            var $mainImage = $('.product__details__pic__main .img-full');
            if ($mainImage.length) {
                var $thumbMagnifier = $('<div class="thumb-magnifier"><img src="" alt=""></div>');
                $('.product__details__pic').append($thumbMagnifier);

                $('.product__details__pic__thumbs .nav-link').on('mouseenter', function () {
                    var $img = $(this).find('img');
                    var src = $img.attr('src');
                    var alt = $img.attr('alt') || '';

                    $('.product__details__pic__thumbs .nav-link').removeClass('active');
                    $(this).addClass('active');

                    if (src) {
                        $mainImage.attr('src', src).attr('alt', alt);
                        $thumbMagnifier.find('img').attr('src', src).attr('alt', alt);
                    }

                    var offset = $img.offset();
                    if (offset) {
                        $thumbMagnifier.css({
                            top: offset.top - $(window).scrollTop() - 40,
                            left: offset.left + $img.outerWidth() + 15,
                            display: 'block'
                        });
                    }
                }).on('mouseleave', function () {
                    $thumbMagnifier.hide();
                });

                $('.product__details__pic__thumbs .nav-link').on('click', function (e) {
                    e.preventDefault();
                    var $img = $(this).find('img');
                    var src = $img.attr('src');
                    var alt = $img.attr('alt') || '';
                    if (src) {
                        $mainImage.attr('src', src).attr('alt', alt);
                    }
                });

                $thumbMagnifier.on('mouseleave', function () {
                    $(this).hide();
                });
            }
        });
    </script>
}