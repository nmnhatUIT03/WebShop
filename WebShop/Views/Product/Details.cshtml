                            </li>
                        </ul>
                        <div class="tab-content" style="background: #F8F9FA; padding: 15px; border-radius: 12px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);">
                            <div class="tab-pane active" id="tabs-5" role="tabpanel">
                                <p style="font-family: 'Roboto', sans-serif; font-size: 1rem; color: #666666; line-height: 1.8; margin: 0;">@Model.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Related Products -->
    <div class="related-products" style="padding: 60px 0; background: #F8F9FA;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h3 style="font-family: 'Playfair Display', serif; font-size: 2.5rem; color: #0A0A0A; text-align: center; margin-bottom: 40px; letter-spacing: 2px; position: relative;">
                        Sản phẩm liên quan
                        <span style="position: absolute; bottom: -10px; left: 50%; transform: translateX(-50%); width: 80px; height: 1px; background: #A0A0A0;"></span>
                    </h3>
                </div>
            </div>
            <div class="row">
                @if (lsProducts.Any())
                {
                    foreach (var item in lsProducts)
                    {
                        string url = $"/{item.Alias}-{item.ProductId}.html";
                        decimal finalPrice = item.Discount.HasValue ? item.Price.Value * (1 - (item.Discount.Value / 100m)) : item.Price.Value;
                        <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
                            <div class="product-item" style="background: #FFFFFF; border-radius: 12px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05); overflow: hidden; transition: transform 0.4s ease, box-shadow 0.4s ease;">
                                <div class="product-img" style="position: relative; overflow: hidden;">
                                    <a href="@url">
                                        @{
                                            var relatedThumb = !string.IsNullOrEmpty(item.Thumb) 
                                                ? (item.Thumb.StartsWith("/") || item.Thumb.StartsWith("~") || item.Thumb.StartsWith("http")
                                                    ? item.Thumb 
                                                    : "/images/products/" + item.Thumb)
                                                : "data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7";
                                        }
                                        <img src="@Url.Content(relatedThumb)" alt="@item.ProductName" style="width: 100%; height: 200px; object-fit: cover; transition: transform 0.5s ease;">
                                    </a>
                                    @if (item.Discount.HasValue && item.Discount.Value > 0)
                                    {
                                        <div class="discount-badge" style="position: absolute; top: 10px; left: 10px; background: #FF4444; color: #FFFFFF; padding: 4px 8px; border-radius: 4px; font-size: 0.75rem; font-weight: bold;">
                                            -@((int)item.Discount.Value)%
                                        </div>
                                    }
                                </div>
                                <div class="product-text" style="padding: 15px; text-align: center;">
                                    <h6 style="font-family: 'Playfair Display', serif; font-size: 1rem; color: #0A0A0A; margin-bottom: 10px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                        <a href="@url" style="color: #0A0A0A; text-decoration: none;">@item.ProductName</a>
                                    </h6>
                                    <p style="font-family: 'Roboto', sans-serif; font-size: 0.9rem; color: #A0A0A0;">
                                        @if (item.Discount.HasValue && item.Discount.Value > 0)
                                        {
                                            <span style="text-decoration: line-through;">@item.Price.Value.ToString("#,##0") VND</span>
                                            <span style="color: #FF4444; margin-left: 10px;">@finalPrice.ToString("#,##0") VND</span>
                                        }
                                        else
                                        {
                                            <span>@item.Price.Value.ToString("#,##0") VND</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p style="text-align: center; font-family: 'Roboto', sans-serif; color: #A0A0A0; width: 100%;">Không có sản phẩm liên quan.</p>
                }
            </div>
        </div>
    </div>
</section>
