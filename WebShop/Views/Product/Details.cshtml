                </div>
            </div>
            <div class="col-lg-5 col-md-6">
                <div class="product__details__text" style="padding: 30px; background: rgba(255, 255, 255, 0.95); border-radius: 12px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);">
                    <h4 style="font-family: 'Playfair Display', serif; font-size: 2rem; color: #0A0A0A; margin-bottom: 20px; letter-spacing: 1px; text-align: center;">@Model.ProductName</h4>
                    <div class="rating" style="font-family: 'Roboto', sans-serif; font-size: 0.9rem; color: #A0A0A0; margin-bottom: 20px; text-align: center;">
                        <i class="fa fa-star" style="color: #e64500;"></i>
                        <i class="fa fa-star" style="color: #e64500;"></i>
                        <i class="fa fa-star" style="color: #e64500;"></i>
                        <i class="fa fa-star" style="color: #e64500;"></i>
                        <i class="fa fa-star-o" style="color: #A0A0A0;"></i>
                        <span style="margin-left: 10px;">- 5 Đánh giá</span>
                    </div>
                    <h4 style="font-family: 'Roboto', sans-serif; font-size: 1.8rem; color: #FF4444; margin-bottom: 20px; text-align: center;">
                        <span>@(Model.DiscountPrice.HasValue ? Model.DiscountPrice.Value.ToString("#,##0") : Model.Price.Value.ToString("#,##0")) VND</span>
                        @if (Model.DiscountPrice.HasValue && Model.DiscountPrice.Value != Model.Price.Value)
                        {
                            <span style="font-size: 1rem; color: #A0A0A0; text-decoration: line-through; margin-left: 10px;">@Model.Price.Value.ToString("#,##0") VND</span>
                        }
                    </h4>
                    <div class="product__details__option" style="margin-bottom: 20px; display: flex; flex-wrap: wrap; gap: 15px; align-items: flex-start;">
                        <div class="product__details__option__size" style="flex: 1; min-width: 200px;">
                            <span style="font-family: 'Roboto', sans-serif; font-size: 1.2rem; color: #0A0A0A; font-weight: bold; display: block; margin-bottom: 8px;">Kích cỡ:</span>
                            <div style="display: flex; gap: 10px; align-items: center; flex-wrap: wrap;">
                                @{
                                    var availableSizes = productDetails
                                        .Where(pd => pd.Size != null && pd.Stock > 0)
                                        .Select(pd => new { pd.SizeId, pd.Size.SizeName })
                                        .Distinct()
                                        .ToList();
                                    
                                    var categoryName = Model.category?.CatName?.ToLower() ?? "";
                                    var isShoeCategory = categoryName.Contains("giay") || 
                                                        categoryName.Contains("dap") ||
                                                        categoryName.Contains("shoe") ||
                                                        categoryName.Contains("sandal");
                                    
                                    List<dynamic> sizesToShow;
                                    if (isShoeCategory)
                                    {
                                        sizesToShow = availableSizes
                                            .Where(s => int.TryParse(s.SizeName, out _))
                                            .OrderBy(s => int.Parse(s.SizeName))
                                            .ToList<dynamic>();
                                    }
                                    else
                                    {
                                        sizesToShow = availableSizes
                                            .Where(s => !int.TryParse(s.SizeName, out _))
                                            .OrderBy(s => s.SizeName)
                                            .ToList<dynamic>();
                                    }
                                    
                                    if (sizesToShow.Any())
                                    {
                                        foreach (var size in sizesToShow)
                                        {
                                            <span class="size-option" data-size="@size.SizeName" data-size-id="@size.SizeId" style="font-family: 'Roboto', sans-serif; font-size: 0.85rem; color: #0A0A0A; padding: 8px 12px; border: 1px solid #A0A0A0; border-radius: 4px; cursor: pointer; transition: all 0.3s ease;">@size.SizeName</span>
                                        }
                                    }
                                    else
                                    {
                                        <span style="color: #999; font-size: 0.9rem; font-family: 'Roboto', sans-serif;">Không có kích cỡ khả dụng</span>
                                    }
                                }
                            </div>
                        </div>
                        <div class="product__details__option__color" style="flex: 1; min-width: 200px;">
                            <span style="font-family: 'Roboto', sans-serif; font-size: 1.2rem; color: #0A0A0A; font-weight: bold; display: block; margin-bottom: 8px;">Màu sắc:</span>
                            <div style="display: flex; gap: 10px; align-items: center; flex-wrap: wrap;">
                                @{
                                    var availableColors = productDetails
                                        .Where(pd => pd.Color != null && pd.Stock > 0)
                                        .Select(pd => new { pd.ColorId, pd.Color.ColorName })
                                        .GroupBy(c => new { c.ColorId, c.ColorName })
                                        .Select(g => g.First())
                                        .ToList();
                                    
                                    var colorMap = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
                                    {
                                        {"Black", "#000000"}, {"Den", "#000000"},
                                        {"White", "#FFFFFF"}, {"Trang", "#FFFFFF"},
                                        {"Beige", "#F5F5DC"}, {"Be", "#F5F5DC"}, {"Kem", "#F5F5DC"},
                                        {"Brown", "#8B4513"}, {"Nau", "#8B4513"},
                                        {"Red", "#FF0000"}, {"Do", "#FF0000"},
                                        {"Blue", "#0000FF"}, {"Xanh duong", "#0000FF"}, {"Xanh", "#0000FF"},
                                        {"Green", "#008000"}, {"Xanh la", "#008000"},
                                        {"Yellow", "#FFD700"}, {"Vang", "#FFD700"},
                                        {"Gray", "#808080"}, {"Xam", "#808080"},
                                        {"Pink", "#FFC0CB"}, {"Hong", "#FFC0CB"},
                                        {"Orange", "#FF6200"}, {"Cam", "#FF6200"},
                                        {"Navy", "#000080"}, {"Xanh navy", "#000080"},
                                        {"Purple", "#800080"}, {"Tim", "#800080"}
                                    };
                                    
                                    if (availableColors.Any())
                                    {
                                        foreach (var color in availableColors)
                                        {
                                            var colorHex = colorMap.ContainsKey(color.ColorName) ? colorMap[color.ColorName] : "#CCCCCC";
                                            <span class="color-option" data-color-id="@color.ColorId" data-color-name="@color.ColorName" title="@color.ColorName" style="display: inline-block; width: 30px; height: 30px; border-radius: 50%; background: @colorHex; border: 2px solid #A0A0A0; cursor: pointer; transition: all 0.3s ease; position: relative;"></span>
                                        }
                                    }
                                    else
                                    {
                                        <span style="color: #999; font-size: 0.9rem; font-family: 'Roboto', sans-serif;">Không có màu sắc khả dụng</span>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="product__details__cart__option" style="display: flex; align-items: center; gap: 15px; margin-bottom: 20px;">
                        <div class="add-to-cart" style="flex: 1; display: flex; gap: 10px;">
                            <button type="button" class="primary-btn btn-custom-dark btn-add-cart" data-product-id="@Model.ProductId" style="background: #e64500; color: #FFFFFF; padding: 12px 15px; font-family: 'Roboto', sans-serif; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 1px; border-radius: 4px; border: none; cursor: pointer; transition: all 0.3s ease; flex: 1; text-align: center; white-space: nowrap; font-weight: 600;">Thêm vào giỏ</button>
                            <button type="button" class="primary-btn btn-custom-dark btn-buy-now" data-product-id="@Model.ProductId" style="background: #0A0A0A; color: #FFFFFF; padding: 12px 15px; font-family: 'Roboto', sans-serif; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 1px; border-radius: 4px; border: none; cursor: pointer; transition: all 0.3s ease; flex: 1; text-align: center; white-space: nowrap; font-weight: 600;">Mua ngay</button>
                        </div>
                    </div>
                    <div class="product__details__last__option" style="font-family: 'Roboto', sans-serif; font-size: 0.9rem; color: #A0A0A0; text-align: center;">
                        <ul style="list-style: none; display: inline-block; margin-top: 10px;">
                            <li><span style="color: #0A0A0A;">Danh mục:</span> @Model.category?.CatName</li>
                            <li><span style="color: #0A0A0A;">Thẻ:</span> @(string.IsNullOrEmpty(Model.Tags) ? "Không có thẻ" : Model.Tags)</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
