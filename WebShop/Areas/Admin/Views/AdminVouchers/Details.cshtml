@model WebShop.Models.Voucher

@{
    ViewData["Title"] = "Chi tiết voucher: " + (Model?.VoucherCode ?? "Không xác định");
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap');

    body {
        background: #CBD5E0;
        font-family: 'Montserrat', sans-serif;
        color: #1A202C;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
        padding: 30px 20px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    .header-sub-title {
        text-align: center;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        color: #4A5568;
        display: flex;
        justify-content: center;
    }

    .breadcrumb-item {
        color: #4A5568;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item:hover {
            color: #f05a00;
        }

        .breadcrumb-item.active {
            color: #1A202C;
            font-weight: 500;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>';
            margin: 0 10px;
            color: #4A5568;
        }

    .card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 30px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1A202C;
        margin-bottom: 20px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .product-info-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
        font-family: 'Montserrat', sans-serif;
    }

        .product-info-table tbody tr {
            background: #EDF2F7;
            border-radius: 8px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .product-info-table tbody tr:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            }

        .product-info-table td {
            padding: 15px;
            border: none;
            font-size: 0.9rem;
            color: #1A202C;
            vertical-align: middle;
        }

            .product-info-table td:first-child {
                font-weight: 500;
                color: #4A5568;
                width: 30%;
            }

            .product-info-table td.text-dark.font-weight-semibold {
                font-weight: 600;
                color: #1A202C;
            }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        padding: 8px 12px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        border: none;
        color: #FFFFFF;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn-primary {
        background: #f05a00;
    }

        .btn-primary:hover {
            background: #d94f00;
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    .action-buttons {
        display: flex;
        justify-content: flex-start;
        gap: 10px;
        margin-top: 20px;
    }

    @@media (max-width: 767.98px) {
        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 1.3rem;
        }

        .product-info-table td {
            font-size: 0.8rem;
            padding: 10px;
        }

        .btn {
            padding: 6px 10px;
            font-size: 0.7rem;
        }
    }

    @@media (max-width: 575.98px) {
        .page-header {
            padding: 20px 0;
        }

        .breadcrumb {
            font-size: 0.8rem;
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1.2rem;
        }

        .product-info-table td {
            font-size: 0.75rem;
            padding: 8px;
        }

        .btn {
            padding: 5px 8px;
            font-size: 0.65rem;
        }
    }
</style>

<div class="container">
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a asp-area="Admin" asp-controller="AdminVouchers" asp-action="Index" class="breadcrumb-item">Danh sách voucher</a>
                <span class="breadcrumb-item active">Chi tiết voucher: @(Model?.VoucherCode ?? "Không xác định")</span>
            </nav>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết voucher: @(Model?.VoucherCode ?? "Không xác định")</h4>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>ID:</td>
                            <td class="text-dark font-weight-semibold">@Model.VoucherId</td>
                        </tr>
                        <tr>
                            <td>Mã voucher:</td>
                            <td>@(Model?.VoucherCode ?? "Chưa xác định")</td>
                        </tr>
                        <tr>
                            <td>Loại giảm giá:</td>
                            <td>@(Model?.DiscountType ?? "Chưa xác định")</td>
                        </tr>
                        <tr>
                            <td>Giá trị giảm:</td>
                            <td>@(Model?.DiscountType == "Percentage" ? (Model.DiscountValue * 100).ToString("F0") + "%" : Model?.DiscountValue.ToString("N0") ?? "0")</td>
                        </tr>
                        <tr>
                            <td>Số lần tối đa:</td>
                            <td>@Model.MaxUsage</td>
                        </tr>
                        <tr>
                            <td>Đã sử dụng:</td>
                            <td>@Model.UsedCount</td>
                        </tr>
                        <tr>
                            <td>Ngày hết hạn:</td>
                            <td>@(Model?.EndDate?.ToString("dd/MM/yyyy") ?? "Chưa xác định")</td>
                        </tr>
                        <tr>
                            <td>Đơn tối thiểu:</td>
                            <td>@(Model?.MinOrderValue?.ToString("N0") ?? "0")</td>
                        </tr>
                        <tr>
                            <td>Số lần tối đa/người:</td>
                            <td>@Model.DefaultUserMaxUsage</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="action-buttons">
                <a class="btn btn-primary" asp-action="Index">
                    <i class="fas fa-undo m-r-5 fa-lg"></i>
                    <span>Quay lại</span>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
}