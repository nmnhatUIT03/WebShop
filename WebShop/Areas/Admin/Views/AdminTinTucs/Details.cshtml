@model WebShop.Models.TinTuc

@{
    ViewData["Title"] = "Thông tin tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap');

    body {
        background: #CBD5E0;
        font-family: 'Montserrat', sans-serif;
        color: #1A202C;
        font-weight: 400;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
        padding: 20px 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    .header-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.8rem;
        font-weight: 500;
        color: #1A202C;
        text-align: center;
    }

    .header-sub-title {
        text-align: center;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        color: #4A5568;
    }

    .breadcrumb-item {
        color: #4A5568;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item:hover {
            color: #f05a00;
        }

        .breadcrumb-item.active {
            color: #1A202C;
            font-weight: 500;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>';
            margin: 0 10px;
            color: #4A5568;
        }

    .card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 30px;
    }

    .card-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.2rem;
        font-weight: 500;
        color: #1A202C;
        margin-bottom: 20px;
    }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        padding: 8px 15px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn-back {
        background: #4A5568;
        border: none;
        color: #FFFFFF;
    }

        .btn-back:hover {
            background: #2D3748;
            box-shadow: 0 6px 20px rgba(74, 85, 104, 0.5);
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .product-info-table {
        width: 100%;
        border-collapse: collapse;
    }

        .product-info-table td {
            padding: 12px 15px;
            font-family: 'Montserrat', sans-serif;
            font-size: 0.9rem;
            color: #1A202C;
        }

            .product-info-table td:first-child {
                font-weight: 500;
                color: #4A5568;
                width: 30%;
            }

            .product-info-table td.text-dark.font-weight-semibold {
                font-weight: 500;
            }

    .thumbnail-img {
        max-width: 200px;
        max-height: 200px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    @@media (max-width: 767.98px) {
        .card-body {
            padding: 20px;
        }

        .product-info-table td {
            font-size: 0.8rem;
            padding: 10px 12px;
        }

        .btn {
            padding: 6px 12px;
            font-size: 0.7rem;
        }

        .thumbnail-img {
            max-width: 150px;
            max-height: 150px;
        }
    }

    @@media (max-width: 575.98px) {
        .page-header {
            padding: 15px 0;
        }

        .header-title {
            font-size: 1.5rem;
        }

        .breadcrumb {
            font-size: 0.8rem;
        }

        .card-body {
            padding: 15px;
        }

        .product-info-table td {
            font-size: 0.75rem;
            padding: 8px 10px;
        }

        .btn {
            padding: 6px 10px;
            font-size: 0.65rem;
        }

        .thumbnail-img {
            max-width: 120px;
            max-height: 120px;
        }
    }
</style>

<div class="container">
    <div class="page-header">
        <h2 class="header-title">Thông tin tin tức: @Model.Title</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminTinTucs" asp-action="Index">Danh sách tin tức</a>
                <span class="breadcrumb-item active">Thông tin tin tức: @Model.Title</span>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thông tin tin tức</h4>
                    <div class="table-responsive">
                        <table class="product-info-table m-t-20">
                            <tbody>
                                <tr>
                                    <td>ID:</td>
                                    <td class="text-dark font-weight-semibold">@Model.PostId</td>
                                </tr>
                                <tr>
                                    <td>Tiêu đề:</td>
                                    <td>@Model.Title</td>
                                </tr>
                                <tr>
                                    <td>Mô tả ngắn:</td>
                                    <td>@Model.Scontents</td>
                                </tr>
                                <tr>
                                    <td>Nội dung:</td>
                                    <td>@Html.Raw(Model.Contents)</td>
                                </tr>
                                <tr>
                                    <td>Ngày tạo:</td>
                                    <td>@Model.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td>MetaKey:</td>
                                    <td>@Model.MetaKey</td>
                                </tr>
                                <tr>
                                    <td>MetaDesc:</td>
                                    <td>@Model.MetaDesc</td>
                                </tr>
                                <tr>
                                    <td>Ảnh đại diện:</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Thumb) && Model.Thumb != "default.jpg")
                                        {
                                            <img class="thumbnail-img" src="/@Model.Thumb" alt="@Model.Title" />
                                        }
                                        else
                                        {
                                            <span>Không có ảnh</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-left mt-3">
        <a class="btn btn-back btn-tone" asp-action="Index"><i class="fas fa-undo m-r-5 fa-lg"></i>Quay lại</a>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/perfect-scrollbar/1.5.5/perfect-scrollbar.min.js"></script>
    <script>
        $(document).ready(function () {
            // Khởi tạo perfectScrollbar nếu cần
            try {
                if (typeof $.fn.perfectScrollbar === 'function') {
                    $('.card-body').perfectScrollbar();
                } else {
                    console.warn('perfectScrollbar không được tải.');
                }
            } catch (e) {
                console.error('Lỗi khi khởi tạo perfectScrollbar:', e);
            }
        });
    </script>
}