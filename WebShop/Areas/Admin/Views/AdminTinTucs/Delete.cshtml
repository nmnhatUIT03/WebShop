@model WebShop.Models.TinTuc

@{
    ViewData["Title"] = "Xác nhận xóa tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap');

    body {
        background: #CBD5E0;
        font-family: 'Montserrat', sans-serif;
        color: #1A202C;
        font-weight: 400;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
        padding: 20px 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    .header-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.8rem;
        font-weight: 500;
        color: #1A202C;
        text-align: center;
    }

    .header-sub-title {
        text-align: center;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        color: #4A5568;
    }

    .breadcrumb-item {
        color: #4A5568;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item:hover {
            color: #f05a00;
        }

        .breadcrumb-item.active {
            color: #1A202C;
            font-weight: 500;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>';
            margin: 0 10px;
            color: #4A5568;
        }

    .card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 30px;
    }

    .product-info-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

        .product-info-table td {
            padding: 12px 15px;
            vertical-align: middle;
        }

            .product-info-table td:first-child {
                width: 30%;
                font-weight: 500;
                color: #4A5568;
            }

            .product-info-table td:last-child {
                color: #1A202C;
            }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        padding: 8px 15px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .btn i {
            margin-right: 5px;
            font-size: 1.1rem;
            line-height: 1;
        }

    .btn-danger {
        background: #f05a00;
        border: none;
        color: #FFFFFF;
    }

        .btn-danger:hover {
            background: #d94f00;
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    .btn-back {
        background: #000000;
        border: none;
        color: #FFFFFF;
    }

        .btn-back:hover {
            background: #a8a8a8;
            box-shadow: 0 6px 20px rgba(245, 101, 101, 0.5);
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    .update-status {
        font-size: 0.8rem;
        margin-top: 10px;
        text-align: center;
        display: none;
    }

        .update-status.success {
            color: #28a745;
        }

        .update-status.error {
            color: #F56565;
        }

    .thumbnail-img {
        max-width: 100px;
        max-height: 100px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    @@media (max-width: 767.98px) {
        .card-body {
            padding: 20px;
        }

        .product-info-table td {
            padding: 8px 10px;
            font-size: 0.9rem;
        }

        .btn {
            padding: 6px 12px;
            font-size: 0.7rem;
        }

            .btn i {
                font-size: 1rem;
            }
    }

    @@media (max-width: 575.98px) {
        .page-header {
            padding: 15px 0;
        }

        .header-title {
            font-size: 1.5rem;
        }

        .breadcrumb {
            font-size: 0.8rem;
        }

        .card-body {
            padding: 15px;
        }

        .product-info-table td {
            padding: 6px 8px;
            font-size: 0.75rem;
        }

        .btn {
            padding: 6px 10px;
            font-size: 0.65rem;
        }

            .btn i {
                font-size: 0.9rem;
            }
    }
</style>

<div class="container">
    <div class="page-header">
        <h2 class="header-title">Xác nhận xóa tin tức</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminTinTucs" asp-action="Index">Danh sách tin tức</a>
                <span class="breadcrumb-item active">Xác nhận xóa tin tức: @Model.Title</span>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Xác nhận xóa tin tức</h4>
                    <div class="table-responsive">
                        <table class="product-info-table m-t-20">
                            <tbody>
                                <tr>
                                    <td>ID:</td>
                                    <td class="text-dark font-weight-semibold">@Model.PostId</td>
                                </tr>
                                <tr>
                                    <td>Tiêu đề:</td>
                                    <td>@Model.Title</td>
                                </tr>
                                <tr>
                                    <td>Mô tả ngắn:</td>
                                    <td>@Model.Scontents</td>
                                </tr>
                                <tr>
                                    <td>Mô tả:</td>
                                    <td>@Model.Contents</td>
                                </tr>
                                <tr>
                                    <td>Ngày tạo:</td>
                                    <td>@Model.CreatedDate</td>
                                </tr>
                                <tr>
                                    <td>MetaKey:</td>
                                    <td>@Model.MetaKey</td>
                                </tr>
                                <tr>
                                    <td>MetaDesc:</td>
                                    <td>@Model.MetaDesc</td>
                                </tr>
                                <tr>
                                    <td>Ảnh:</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Thumb) && Model.Thumb != "default.jpg")
                                        {
                                            <img class="thumbnail-img" src="/@Model.Thumb" alt="@Model.Title" />
                                        }
                                        else
                                        {
                                            <p>Không có ảnh</p>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Xác nhận xóa:</td>
                                    <td>
                                        <form id="deleteForm" asp-controller="AdminTinTucs" asp-action="Delete" asp-route-id="@Model.PostId" method="post">
                                            <input type="hidden" asp-for="PostId" />
                                            <button type="submit" class="btn btn-danger btn-tone"><i class="far fa-trash-alt fa-lg m-r-5"></i>Xác nhận xóa</button>
                                            <a class="btn btn-back btn-tone m-r-5" asp-action="Index"><i class="fas fa-undo fa-lg m-r-5"></i>Hủy bỏ</a>
                                            <div class="update-status" id="DeleteFormStatus"></div>
                                        </form>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/perfect-scrollbar/1.5.5/perfect-scrollbar.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize perfectScrollbar
            try {
                if (typeof $.fn.perfectScrollbar === 'function') {
                    $('.card-body').perfectScrollbar();
                } else {
                    console.warn('perfectScrollbar not loaded.');
                }
            } catch (e) {
                console.error('Error initializing perfectScrollbar:', e);
            }

            // Handle form submission with AJAX
            $('#deleteForm').on('submit', function (e) {
                e.preventDefault();

                var form = $(this);
                var data = form.serialize();

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: data,
                    headers: {
                        RequestVerificationToken: $('input[name="__RequestVerificationToken"]', form).val()
                    },
                    success: function (response) {
                        $('#DeleteFormStatus').show();
                        if (response.success) {
                            $('#DeleteFormStatus').addClass('success').text('Xóa tin tức thành công!');
                            setTimeout(function () {
                                $('#DeleteFormStatus').fadeOut(2000, function () {
                                    window.location.href = '@Url.Action("Index", "AdminTinTucs", new { area = "Admin" })';
                                });
                            }, 2000);
                        } else {
                            $('#DeleteFormStatus').addClass('error').text(response.message);
                            setTimeout(function () {
                                $('#DeleteFormStatus').fadeOut(2000);
                            }, 4000);
                        }
                    },
                    error: function (xhr) {
                        var message = xhr.responseJSON?.message || 'Lỗi hệ thống khi xóa tin tức.';
                        $('#DeleteFormStatus').show().addClass('error').text(message);
                        setTimeout(function () {
                            $('#DeleteFormStatus').fadeOut(2000);
                        }, 4000);
                    }
                });
            });
        });
    </script>
}