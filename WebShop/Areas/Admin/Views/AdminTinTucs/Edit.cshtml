@model WebShop.Models.TinTuc

@{
    ViewData["Title"] = "Chỉnh sửa tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form id="tinTucForm" asp-controller="AdminTinTucs" asp-action="Edit" asp-route-id="@Model.PostId" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PostId" />
    <input type="hidden" asp-for="CreatedDate" />
    <input type="hidden" id="OriginalTitle" value="@Model.Title" />
    <input type="hidden" id="OriginalScontents" value="@(Model.Scontents ?? "")" />
    <input type="hidden" id="OriginalThumb" value="@Model.Thumb" />
    <input type="hidden" id="OriginalMetaDesc" value="@(Model.MetaDesc ?? "")" />
    <input type="hidden" id="OriginalMetaKey" value="@(Model.MetaKey ?? "")" />
    <input type="hidden" id="OriginalContents" value="@(Model.Contents ?? "")" />
    <input type="hidden" id="OriginalPublished" value="@Model.Published.ToString()" />
    <div class="container">
        <div class="page-header">
            <h2 class="header-title">Chỉnh sửa tin tức</h2>
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                    <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminTinTucs" asp-action="Index">Danh sách tin tức</a>
                    <span class="breadcrumb-item active">Chỉnh sửa tin tức</span>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin cơ bản</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#product-edit-option">Thông tin thêm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#product-edit-description">Mô tả</a>
                    </li>
                </ul>
                <div class="tab-content m-t-15">
                    <div class="tab-pane fade show active" id="product-edit-basic">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="control-label" asp-for="Title">Tiêu đề</label>
                                    <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề" value="@Model.Title" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" asp-for="Scontents">Mô tả ngắn</label>
                                    <input asp-for="Scontents" class="form-control" placeholder="Nhập mô tả ngắn" value="@Model.Scontents" />
                                    <span asp-validation-for="Scontents" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" asp-for="Thumb">Ảnh đại diện</label>
                                    @if (!string.IsNullOrEmpty(Model.Thumb) && Model.Thumb != "default.jpg")
                                    {
                                        <div>
                                            <img class="thumbnail-img" src="/@Model.Thumb" alt="@Model.Title" />
                                        </div>
                                    }
                                    else
                                    {
                                        <p>Không có ảnh</p>
                                    }
                                    <input name="fThumb" type="file" class="form-control-file" accept="image/*" />
                                    <span asp-validation-for="Thumb" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" asp-for="Published">Trạng thái</label>
                                    <select class="custom-select" asp-for="Published">
                                        <option value="">Chọn trạng thái</option>
                                        <option value="true" selected="@(Model.Published == true ? "selected" : null)">Đã phát hành</option>
                                        <option value="false" selected="@(Model.Published == false ? "selected" : null)">Chưa phát hành</option>
                                    </select>
                                    <span asp-validation-for="Published" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="product-edit-option">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="control-label" asp-for="MetaDesc">MetaDesc</label>
                                    <input asp-for="MetaDesc" class="form-control" placeholder="Nhập MetaDesc" value="@Model.MetaDesc" />
                                    <span asp-validation-for="MetaDesc" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" asp-for="MetaKey">Metakey</label>
                                    <input asp-for="MetaKey" class="form-control" placeholder="Nhập Metakey" value="@Model.MetaKey" />
                                    <span asp-validation-for="MetaKey" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="product-edit-description">
                        <div class="card">
                            <div class="card-body">
                                <label class="control-label" asp-for="Contents">Mô tả</label>
                                <textarea class="form-control" asp-for="Contents" placeholder="Nhập mô tả chi tiết"></textarea>
                                <span asp-validation-for="Contents" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group text-center">
                    <button type="button" class="btn btn-update btn-tone m-r-5" id="updateButton"><i class="anticon anticon-save fa-lg"></i><span>Cập nhật</span></button>
                    <a class="btn btn-back btn-tone m-r-5" asp-action="Index"><i class="fas fa-undo fa-lg"></i><span>Quay lại</span></a>
                    <div class="update-status" id="TinTucFormStatus"></div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/perfect-scrollbar/1.5.5/perfect-scrollbar.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Initialize perfectScrollbar
            try {
                if (typeof $.fn.perfectScrollbar === 'function') {
                    $('.card-body').perfectScrollbar();
                } else {
                    console.warn('perfectScrollbar not loaded.');
                }
            } catch (e) {
                console.error('Error initializing perfectScrollbar:', e);
            }

            // Store original values
            var originalValues = {
                Title: $('#OriginalTitle').val(),
                Scontents: $('#OriginalScontents').val(),
                Thumb: $('#OriginalThumb').val(),
                MetaDesc: $('#OriginalMetaDesc').val(),
                MetaKey: $('#OriginalMetaKey').val(),
                Contents: $('#OriginalContents').val(),
                Published: $('#OriginalPublished').val()
            };

            // Form validation
            $('#tinTucForm').validate({
                rules: {
                    Title: { required: true, minlength: 2 },
                    Scontents: { required: true, minlength: 2 },
                    Thumb: { required: false },
                    MetaDesc: { required: false },
                    MetaKey: { required: false },
                    Contents: { required: true, minlength: 2 },
                    Published: { required: true }
                },
                messages: {
                    Title: {
                        required: "Vui lòng nhập tiêu đề.",
                        minlength: "Tiêu đề phải có ít nhất 2 ký tự."
                    },
                    Scontents: {
                        required: "Vui lòng nhập mô tả ngắn.",
                        minlength: "Mô tả ngắn phải có ít nhất 2 ký tự."
                    },
                    Contents: {
                        required: "Vui lòng nhập mô tả chi tiết.",
                        minlength: "Mô tả chi tiết phải có ít nhất 2 ký tự."
                    },
                    Published: {
                        required: "Vui lòng chọn trạng thái."
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('text-danger');
                    error.insertAfter(element);
                },
                highlight: function (element) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element) {
                    $(element).removeClass('is-invalid');
                }
            });

            // Handle update button click
            $('#updateButton').on('click', function () {
                if (!$('#tinTucForm').valid()) {
                    return;
                }

                var formData = new FormData($('#tinTucForm')[0]);
                formData.append('PostId', $('#PostId').val());
                formData.append('CreatedDate', $('#CreatedDate').val());

                $('#tinTucForm .form-control, #tinTucForm .custom-select').addClass('is-updating');
                $('#TinTucFormStatus').hide().removeClass('success error').text('');

                $.ajax({
                    url: '@Url.Action("Edit", "AdminTinTucs", new { area = "Admin" })',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    headers: {
                        RequestVerificationToken: $('#tinTucForm input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        $('#TinTucFormStatus').show();
                        if (response.success) {
                            $('#TinTucFormStatus').addClass('success').text('Cập nhật tin tức thành công!').show();
                            $('#tinTucForm .form-control, #tinTucForm .custom-select').removeClass('is-invalid').next('.text-danger').text('');
                            if (response.data.Title) originalValues.Title = response.data.Title;
                            if (response.data.Scontents) originalValues.Scontents = response.data.Scontents;
                            if (response.data.Thumb) originalValues.Thumb = response.data.Thumb;
                            if (response.data.MetaDesc) originalValues.MetaDesc = response.data.MetaDesc;
                            if (response.data.MetaKey) originalValues.MetaKey = response.data.MetaKey;
                            if (response.data.Contents) originalValues.Contents = response.data.Contents;
                            if (response.data.Published) originalValues.Published = response.data.Published;
                            $('#OriginalTitle').val(originalValues.Title);
                            $('#OriginalScontents').val(originalValues.Scontents);
                            $('#OriginalThumb').val(originalValues.Thumb);
                            $('#OriginalMetaDesc').val(originalValues.MetaDesc);
                            $('#OriginalMetaKey').val(originalValues.MetaKey);
                            $('#OriginalContents').val(originalValues.Contents);
                            $('#OriginalPublished').val(originalValues.Published);
                            setTimeout(function () {
                                $('#TinTucFormStatus').fadeOut(2000, function () {
                                    window.location.href = '@Url.Action("Index", "AdminTinTucs", new { area = "Admin" })';
                                });
                            }, 2000);
                        } else {
                            $('#TinTucFormStatus').addClass('error').text(response.message).show();
                            if (response.field) {
                                $('#tinTucForm #' + response.field).addClass('is-invalid');
                                $('#tinTucForm #' + response.field).next('.text-danger').text(response.message);
                            }
                            setTimeout(function () {
                                $('#TinTucFormStatus').fadeOut(2000);
                            }, 4000);
                        }
                    },
                    error: function (xhr) {
                        var message = xhr.responseJSON?.message || 'Lỗi hệ thống khi cập nhật tin tức.';
                        $('#TinTucFormStatus').show().addClass('error').text(message);
                        setTimeout(function () {
                            $('#TinTucFormStatus').fadeOut(2000);
                        }, 4000);
                    },
                    complete: function () {
                        $('#tinTucForm .form-control, #tinTucForm .custom-select').removeClass('is-updating');
                    }
                });
            });
        });
    </script>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap');

        body {
            background: #CBD5E0;
            font-family: 'Montserrat', sans-serif;
            color: #1A202C;
            font-weight: 400;
            overflow-x: hidden;
        }

        .container {
            max-width: 1440px;
            padding: 0 20px;
            margin: 0 auto;
        }

        .page-header {
            background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
            padding: 20px 30px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            margin-bottom: 30px;
        }

        .header-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 1.8rem;
            font-weight: 500;
            color: #1A202C;
            text-align: center;
        }

        .header-sub-title {
            text-align: center;
        }

        .breadcrumb {
            background: none;
            padding: 0;
            margin: 0;
            font-family: 'Montserrat', sans-serif;
            font-size: 0.9rem;
            color: #4A5568;
        }

        .breadcrumb-item {
            color: #4A5568;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .breadcrumb-item:hover {
                color: #f05a00;
            }

            .breadcrumb-item.active {
                color: #1A202C;
                font-weight: 500;
            }

            .breadcrumb-item + .breadcrumb-item::before {
                content: '>';
                margin: 0 10px;
                color: #4A5568;
            }

        .card {
            background: #FFFFFF;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
            }

        .card-body {
            padding: 30px;
        }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .control-label {
            font-family: 'Montserrat', sans-serif;
            font-size: 0.9rem;
            font-weight: 500;
            color: #1A202C;
            margin-bottom: 8px;
        }

        .form-control {
            font-family: 'Montserrat', sans-serif;
            font-size: 0.9rem;
            border-radius: 8px;
            border: 1px solid #CBD5E0;
            padding: 10px 15px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control:focus {
                border-color: #f05a00;
                box-shadow: 0 0 8px rgba(240, 90, 0, 0.3);
                outline: none;
            }

            .form-control:disabled, .form-control[readonly] {
                background-color: #E2E8F0;
                cursor: not-allowed;
            }

            .form-control.is-updating {
                border-color: #f05a00;
                box-shadow: 0 0 8px rgba(240, 90, 0, 0.3);
            }

        .text-danger {
            font-size: 0.8rem;
            color: #F56565;
        }

        .form-control.is-invalid {
            border-color: #F56565;
        }

        .btn {
            font-family: 'Montserrat', sans-serif;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-radius: 8px;
            padding: 8px 15px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .btn-update {
            background: #f05a00;
            border: none;
            color: #FFFFFF;
        }

            .btn-update:hover {
                background: #d94f00;
                box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
            }

        .btn-back {
            background: #000000;
            border: none;
            color: #FFFFFF;
        }

            .btn-back:hover {
                background: #a8a8a8;
                box-shadow: 0 6px 20px rgba(245, 101, 101, 0.5);
            }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.5s ease;
        }

        .btn:hover::before {
            left: 100%;
        }

        .update-status {
            font-size: 0.8rem;
            margin-top: 10px;
            text-align: center;
            display: none;
        }

            .update-status.success {
                color: #28a745;
            }

            .update-status.error {
                color: #F56565;
            }

        .thumbnail-img {
            max-width: 100px;
            max-height: 100px;
            object-fit: cover;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        @@media (max-width: 767.98px) {
            .card-body {
                padding: 20px;
            }

            .form-control {
                font-size: 0.8rem;
                padding: 8px 12px;
            }

            .btn {
                padding: 6px 12px;
                font-size: 0.7rem;
            }
        }

        @@media (max-width: 575.98px) {
            .page-header {
                padding: 15px 0;
            }

            .header-title {
                font-size: 1.5rem;
            }

            .breadcrumb {
                font-size: 0.8rem;
            }

            .card-body {
                padding: 15px;
            }

            .form-control {
                font-size: 0.75rem;
                padding: 6px 10px;
            }

            .btn {
                padding: 6px 10px;
                font-size: 0.65rem;
            }
        }
    </style>
}