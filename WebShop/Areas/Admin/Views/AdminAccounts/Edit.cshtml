@model WebShop.Areas.Admin.Models.RegisterAdminVM
@{
    ViewData["Title"] = "Sửa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap');

    body {
        background: #CBD5E0;
        font-family: 'Montserrat', sans-serif;
        color: #1A202C;
        font-weight: 400;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
        padding: 20px 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    .header-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.8rem;
        font-weight: 500;
        color: #1A202C;
        text-align: center;
    }

    .header-sub-title {
        text-align: center;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        color: #4A5568;
    }

    .breadcrumb-item {
        color: #4A5568;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item:hover {
            color: #f05a00;
        }

        .breadcrumb-item.active {
            color: #1A202C;
            font-weight: 500;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>';
            margin: 0 10px;
            color: #4A5568;
        }

    .card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 30px;
    }

    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .control-label {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        font-weight: 500;
        color: #1A202C;
        margin-bottom: 8px;
    }

    .form-control {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        border-radius: 8px;
        border: 1px solid #CBD5E0;
        padding: 10px 15px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #f05a00;
            box-shadow: 0 0 8px rgba(240, 90, 0, 0.3);
            outline: none;
        }

        .form-control:disabled, .form-control[readonly] {
            background-color: #E2E8F0;
            cursor: not-allowed;
        }

        .form-control.is-updating {
            border-color: #f05a00;
            box-shadow: 0 0 8px rgba(240, 90, 0, 0.3);
        }

    .text-danger {
        font-size: 0.8rem;
        color: #F56565;
    }

    .form-control.is-invalid {
        border-color: #F56565;
    }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        padding: 8px 15px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-update {
        background: #f05a00;
        border: none;
        color: #FFFFFF;
    }

        .btn-update:hover {
            background: #d94f00;
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    .btn-password {
        background: #4A5568;
        border: none;
        color: #FFFFFF;
    }

        .btn-password:hover {
            background: #4A5568FF;
            box-shadow: #4A5568;
            color: #FFFFFF;
        }

    .btn-back {
        background: #000000;
        border: none;
        color: #FFFFFF;
    }

        .btn-back:hover {
            background: #a8a8a8;
            box-shadow: 0 6px 20px rgba(245, 101, 101, 0.5);
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    .update-status {
        font-size: 0.8rem;
        margin-top: 10px;
        text-align: center;
        display: none;
    }

        .update-status.success {
            color: #28a745;
        }

        .update-status.error {
            color: #F56565;
        }

    @@media (max-width: 767.98px) {
        .card-body {
            padding: 20px;
        }

        .form-control {
            font-size: 0.8rem;
            padding: 8px 12px;
        }

        .btn {
            padding: 6px 12px;
            font-size: 0.7rem;
        }
    }

    @@media (max-width: 575.98px) {
        .page-header {
            padding: 15px 0;
        }

        .header-title {
            font-size: 1.5rem;
        }

        .breadcrumb {
            font-size: 0.8rem;
        }

        .card-body {
            padding: 15px;
        }

        .form-control {
            font-size: 0.75rem;
            padding: 6px 10px;
        }

        .btn {
            padding: 6px 10px;
            font-size: 0.65rem;
        }
    }
</style>

<div class="container">
    <div class="page-header">
        <h2 class="header-title">Sửa tài khoản</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index" class="breadcrumb-item">Danh sách tài khoản</a>
                <span class="breadcrumb-item active">Sửa tài khoản</span>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <!-- Form chính cho các trường không phải mật khẩu -->
                    <form id="accountForm" asp-controller="AdminAccounts" asp-action="UpdateField" asp-route-id="@Model.AccountId" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" id="AccountId" name="AccountId" value="@Model.AccountId" />
                        <input type="hidden" id="OriginalFullName" value="@Model.FullName" />
                        <input type="hidden" id="OriginalEmail" value="@Model.Email" />
                        <input type="hidden" id="OriginalPhone" value="@Model.Phone" />
                        <input type="hidden" id="OriginalActive" value="@Model.Active.ToString().ToLower()" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label">Số điện thoại</label>
                                    <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FullName" class="control-label">Họ và Tên</label>
                                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Active" class="control-label">Trạng thái</label>
                                    <select asp-for="Active" class="form-control">
                                        <option value="true">Hoạt động</option>
                                        <option value="false">Không hoạt động</option>
                                    </select>
                                    <span asp-validation-for="Active" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label">Email</label>
                                    <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Quyền truy cập</label>
                                    <input class="form-control" readonly="readonly" value="@ViewBag.RoleDescription" />
                                    <input asp-for="RoleId" type="hidden" />
                                    <span asp-validation-for="RoleId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <button type="button" class="btn btn-update btn-tone m-r-5" id="updateButton">
                                <i class="far fa-edit m-r-5 fa-lg"></i>
                                Cập nhật
                            </button>
                            <a class="btn btn-back btn-tone m-r-5" asp-action="Index">
                                <i class="fas fa-undo m-r-5 fa-lg"></i>
                                Quay lại
                            </a>
                            <div class="update-status" id="AccountFormStatus"></div>
                        </div>
                    </form>

                    <!-- Form riêng cho mật khẩu -->
                    <form id="passwordForm" asp-controller="AdminAccounts" asp-action="UpdateField" asp-route-id="@Model.AccountId" method="post" enctype="multipart/form-data">
                        <input type="hidden" id="PasswordAccountId" name="AccountId" value="@Model.AccountId" />
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="header-title">Thay đổi mật khẩu</h4>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label">Mật khẩu mới</label>
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu mới" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="control-label">Xác nhận mật khẩu</label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Xác nhận mật khẩu mới" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group text-center">
                                    <button type="button" class="btn btn-password btn-tone m-r-5" id="updatePasswordButton">
                                        <i class="fas fa-lock m-r-5 fa-lg"></i>
                                        Cập nhật mật khẩu
                                    </button>
                                    <div class="update-status" id="PasswordFormStatus"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/perfect-scrollbar/1.5.5/perfect-scrollbar.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Khởi tạo perfectScrollbar nếu cần
            try {
                if (typeof $.fn.perfectScrollbar === 'function') {
                    $('.card-body').perfectScrollbar();
                } else {
                    console.warn('perfectScrollbar không được tải.');
                }
            } catch (e) {
                console.error('Lỗi khi khởi tạo perfectScrollbar:', e);
            }

            // Lưu giá trị ban đầu cho form chính
            var originalValues = {
                FullName: $('#OriginalFullName').val(),
                Email: $('#OriginalEmail').val(),
                Phone: $('#OriginalPhone').val(),
                Active: $('#OriginalActive').val() === 'true'
            };

            // Xử lý nút Cập nhật cho form chính
            $('#updateButton').on('click', function () {
                var data = {
                    AccountId: $('#AccountId').val()
                };
                var hasChanges = false;

                // Kiểm tra các trường đã thay đổi
                if ($('#accountForm #FullName').val() !== originalValues.FullName) {
                    data.FullName = $('#accountForm #FullName').val();
                    hasChanges = true;
                }
                if ($('#accountForm #Email').val() !== originalValues.Email) {
                    data.Email = $('#accountForm #Email').val();
                    hasChanges = true;
                }
                if ($('#accountForm #Phone').val() !== originalValues.Phone) {
                    data.Phone = $('#accountForm #Phone').val();
                    hasChanges = true;
                }
                if ($('#accountForm #Active').val() !== originalValues.Active.toString()) {
                    data.Active = $('#accountForm #Active').val() === 'true';
                    hasChanges = true;
                }

                if (!hasChanges) {
                    $('#AccountFormStatus').addClass('error').text('Không có thay đổi nào để cập nhật.').show();
                    return;
                }

                // Gửi AJAX request cho form chính
                $('#accountForm .form-control').addClass('is-updating');
                $('#AccountFormStatus').hide().removeClass('success error').text('');

                $.ajax({
                    url: '@Url.Action("UpdateField", "AdminAccounts", new { area = "Admin" })', // Sửa ở đây
                    type: 'POST',
                    data: data,
                    headers: {
                        RequestVerificationToken: $('#accountForm input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            $('#AccountFormStatus').addClass('success').text('Cập nhật thông tin thành công!').show();
                            $('#accountForm .form-control').removeClass('is-invalid').next('.text-danger').text('');
                            // Cập nhật giá trị ban đầu và view
                            if (data.FullName) {
                                originalValues.FullName = data.FullName;
                                $('#OriginalFullName').val(data.FullName);
                                $('#accountForm #FullName').val(data.FullName);
                            }
                            if (data.Email) {
                                originalValues.Email = data.Email;
                                $('#OriginalEmail').val(data.Email);
                                $('#accountForm #Email').val(data.Email);
                            }
                            if (data.Phone) {
                                originalValues.Phone = data.Phone;
                                $('#OriginalPhone').val(data.Phone);
                                $('#accountForm #Phone').val(data.Phone);
                            }
                            if (data.Active !== undefined) {
                                originalValues.Active = data.Active;
                                $('#OriginalActive').val(data.Active.toString().toLowerCase());
                                $('#accountForm #Active').val(data.Active.toString());
                            }
                        } else {
                            $('#AccountFormStatus').addClass('error').text(response.message).show();
                            if (response.field) {
                                $('#accountForm #' + response.field).addClass('is-invalid');
                                $('#accountForm #' + response.field).next('.text-danger').text(response.message);
                            }
                        }
                    },
                    error: function (xhr) {
                        var message = xhr.responseJSON?.message || 'Lỗi hệ thống khi cập nhật thông tin.';
                        $('#AccountFormStatus').addClass('error').text(message).show();
                    },
                    complete: function () {
                        $('#accountForm .form-control').removeClass('is-updating');
                    }
                });
            });

            // Xử lý nút Cập nhật mật khẩu
            $('#updatePasswordButton').on('click', function () {
                var data = {
                    AccountId: $('#PasswordAccountId').val(),
                    Password: $('#passwordForm #Password').val(),
                    ConfirmPassword: $('#passwordForm #ConfirmPassword').val()
                };

                if (!data.Password) {
                    $('#passwordForm #Password').addClass('is-invalid');
                    $('#passwordForm #Password').next('.text-danger').text('Vui lòng nhập mật khẩu.');
                    return;
                }

                if (data.Password !== data.ConfirmPassword) {
                    $('#passwordForm #ConfirmPassword').addClass('is-invalid');
                    $('#passwordForm #ConfirmPassword').next('.text-danger').text('Mật khẩu xác nhận không khớp.');
                    return;
                }

                // Gửi AJAX request cho form mật khẩu
                $('#passwordForm .form-control').addClass('is-updating');
                $('#PasswordFormStatus').hide().removeClass('success error').text('');

                $.ajax({
                    url: '@Url.Action("UpdateField", "AdminAccounts", new { area = "Admin" })', // Sửa ở đây
                    type: 'POST',
                    data: data,
                    headers: {
                        RequestVerificationToken: $('#passwordForm input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            $('#PasswordFormStatus').addClass('success').text('Cập nhật mật khẩu thành công!').show();
                            $('#passwordForm .form-control').removeClass('is-invalid').val('').next('.text-danger').text('');
                        } else {
                            $('#PasswordFormStatus').addClass('error').text(response.message).show();
                            if (response.field) {
                                $('#passwordForm #' + response.field).addClass('is-invalid');
                                $('#passwordForm #' + response.field).next('.text-danger').text(response.message);
                            }
                        }
                    },
                    error: function (xhr) {
                        var message = xhr.responseJSON?.message || 'Lỗi hệ thống khi cập nhật mật khẩu.';
                        $('#PasswordFormStatus').addClass('error').text(message).show();
                    },
                    complete: function () {
                        $('#passwordForm .form-control').removeClass('is-updating');
                    }
                });
            });

            // Kiểm tra Email qua AJAX
            $('#accountForm #Email').on('blur', function () {
                var email = $(this).val();
                var accountId = $('#AccountId').val();
                if (email && email !== originalValues.Email) {
                    $.ajax({
                        url: '@Url.Action("ValidateEmail", "AdminAccounts", new { area = "Admin" })', // Sửa ở đây
                        type: 'GET',
                        data: { Email: email, AccountId: accountId },
                        success: function (data) {
                            if (data !== true) {
                                $('#accountForm #Email').addClass('is-invalid');
                                $('#accountForm #Email').next('.text-danger').text(data);
                            } else {
                                $('#accountForm #Email').removeClass('is-invalid');
                                $('#accountForm #Email').next('.text-danger').text('');
                            }
                        },
                        error: function () {
                            $('#accountForm #Email').addClass('is-invalid');
                            $('#accountForm #Email').next('.text-danger').text('Lỗi khi kiểm tra email.');
                        }
                    });
                } else if (!email) {
                    $('#accountForm #Email').addClass('is-invalid');
                    $('#accountForm #Email').next('.text-danger').text('Email là bắt buộc.');
                }
            });

            // Kiểm tra Phone qua AJAX
            $('#accountForm #Phone').on('blur', function () {
                var phone = $(this).val();
                var accountId = $('#AccountId').val();
                if (phone && phone !== originalValues.Phone) {
                    $.ajax({
                        url: '@Url.Action("ValidatePhone", "AdminAccounts", new { area = "Admin" })', // Sửa ở đây
                        type: 'GET',
                        data: { Phone: phone, AccountId: accountId },
                        success: function (data) {
                            if (data !== true) {
                                $('#accountForm #Phone').addClass('is-invalid');
                                $('#accountForm #Phone').next('.text-danger').text(data);
                            } else {
                                $('#accountForm #Phone').removeClass('is-invalid');
                                $('#accountForm #Phone').next('.text-danger').text('');
                            }
                        },
                        error: function () {
                            $('#accountForm #Phone').addClass('is-invalid');
                            $('#accountForm #Phone').next('.text-danger').text('Lỗi khi kiểm tra số điện thoại.');
                        }
                    });
                } else {
                    $('#accountForm #Phone').removeClass('is-invalid');
                    $('#accountForm #Phone').next('.text-danger').text('');
                }
            });
        });
    </script>
}