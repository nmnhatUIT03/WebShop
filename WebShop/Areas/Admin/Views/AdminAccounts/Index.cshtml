@model PagedList.Core.IPagedList<WebShop.Models.Account>
@using System.Globalization

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách tài khoản quản trị - Trang " + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap');

    body {
        background: #CBD5E0;
        font-family: 'Montserrat', sans-serif;
        color: #1A202C;
        font-weight: 400;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
        padding: 20px 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    .header-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.8rem;
        font-weight: 500;
        color: #1A202C;
        text-align: center;
    }

    .header-sub-title {
        text-align: center;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        color: #4A5568;
    }

    .breadcrumb-item {
        color: #4A5568;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item:hover {
            color: #f05a00;
        }

        .breadcrumb-item.active {
            color: #1A202C;
            font-weight: 500;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>';
            margin: 0 10px;
            color: #4A5568;
        }

    .card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 30px;
    }

    .card-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.5rem;
        font-weight: 400;
        color: #1A202C;
        margin-bottom: 20px;
    }

    .table {
        font-family: 'Montserrat', sans-serif;
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table th {
            font-weight: 600;
            color: #1A202C;
            padding: 15px;
            background: #F7FAFC;
            border-bottom: 2px solid #E2E8F0;
        }

        .table td {
            padding: 15px;
            vertical-align: middle;
            border-bottom: 1px solid #E2E8F0;
            color: #2D3748;
        }

            .table td p {
                color: #000000;
                margin: 0;
                font-weight: 400;
            }

                .table td p strong {
                    font-weight: 500;
                }

        .table tr:hover {
            background: #F7FAFC;
        }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        padding: 8px 15px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-edit {
        background: linear-gradient(to right, #a8a8a8 0%, #a8a8a8 100%);
        border: none;
        color: #FFFFFF;
    }

        .btn-edit:hover {
            background: linear-gradient(to right, #a8a8a8 0%, #a8a8a8 80%, #9a9a9a 100%);
            box-shadow: 0 6px 20px rgba(168, 168, 168, 0.5);
        }

    .btn-success {
        background: #f05a00;
        border: none;
        color: #FFFFFF;
    }

        .btn-success:hover {
            background: #d94f00;
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    .btn-primary {
        background: #000000 !important;
        border: none;
        color: #FFFFFF;
    }

        .btn-primary:hover {
            background: #333333 !important;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5);
        }

    .btn-delete {
        background: #F56565;
        border: none;
        color: #FFFFFF;
    }

        .btn-delete:hover {
            background: #E53E3E;
            box-shadow: 0 6px 20px rgba(245, 101, 101, 0.5);
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    .pagination {
        font-family: 'Montserrat', sans-serif;
        justify-content: center;
        margin-top: 15px;
        display: flex;
    }

        .pagination .page-item {
            margin: 0 3px;
        }

            .pagination .page-item .page-link {
                color: #FFFFFF;
                background: #f05a00; /* Màu cam mặc định */
                border-radius: 6px;
                padding: 6px 12px;
                font-size: 0.75rem;
                transition: all 0.3s ease;
                line-height: 1.5;
                border: 1px solid #f05a00;
            }

                .pagination .page-item .page-link:hover {
                    background: linear-gradient(to right, #f05a00 0%, #d94f00 100%); /* Gradient cam khi hover */
                    color: #FFFFFF;
                    border-color: #d94f00;
                    box-shadow: 0 4px 10px rgba(240, 90, 0, 0.4);
                }

            .pagination .page-item.active .page-link {
                background: #f05a00 !important; /* Màu cam đỏ cho trang active, thêm !important để ghi đè */
                border-color: #f05a00 !important;
                color: #FFFFFF !important;
            }

            .pagination .page-item.disabled .page-link {
                background: #f7c9a6; /* Màu cam nhạt cho trạng thái disabled */
                color: #6b7280;
                cursor: not-allowed;
                border: 1px solid #f7c9a6;
            }

    .search-form {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }

    .search-input {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        border-radius: 8px;
        border: 1px solid #CBD5E0;
        padding: 10px 15px;
        width: 100%;
        max-width: 300px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .search-input:focus {
            border-color: #f05a00;
            box-shadow: 0 0 8px rgba(240, 90, 0, 0.3);
            outline: none;
        }

    .search-button {
        background: #f05a00;
        border: none;
        color: #FFFFFF;
        padding: 10px 15px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .search-button:hover {
            background: #d94f00;
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    .badge {
        font-size: 0.8rem;
        padding: 5px 10px;
        border-radius: 12px;
    }

    .badge-success {
        background: #48BB78;
        color: #FFFFFF;
    }

    .badge-danger {
        background: #f05a00;
        color: #FFFFFF;
    }

    @@media (max-width: 767.98px) {
        .card-body {
            padding: 20px;
        }

        .table th, .table td {
            padding: 10px;
            font-size: 0.8rem;
        }

        .btn {
            padding: 6px 12px;
            font-size: 0.7rem;
        }

        .table .btn {
            padding: 2px 6px;
            height: 26px;
            font-size: 0.7rem;
        }

        .table .btn-primary, .table .btn-delete, .table .btn-success {
            min-width: 35px;
        }

        .search-input {
            font-size: 0.8rem;
            max-width: 200px;
        }

        .pagination .page-item .page-link {
            padding: 5px 10px;
            font-size: 0.7rem;
        }
    }

    @@media (max-width: 575.98px) {
        .page-header {
            padding: 15px 0;
        }

        .header-title {
            font-size: 1.5rem;
        }

        .breadcrumb {
            font-size: 0.8rem;
        }

        .card-body {
            padding: 15px;
        }

        .table th, .table td {
            padding: 8px;
            font-size: 0.75rem;
        }

        .table .btn {
            padding: 1px 4px;
            height: 24px;
            font-size: 0.65rem;
        }

        .table .btn-primary, .table .btn-delete, .table .btn-success {
            min-width: 30px;
        }

        .search-input {
            font-size: 0.75rem;
            max-width: 150px;
        }

        .pagination .page-item .page-link {
            padding: 4px 8px;
            font-size: 0.65rem;
        }
    }
</style>

<div class="container">
    <div class="page-header">
        <h2 class="header-title">Danh sách tài khoản quản trị</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <span class="breadcrumb-item active">Danh sách tài khoản - Trang @CurrentPage</span>
            </nav>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">
                <div class="col-lg-8">
                    <h4 class="card-title">Tổng số: @Model.TotalItemCount tài khoản</h4>
                    <form asp-action="Index" method="get" class="search-form">
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Tìm kiếm tài khoản..." class="search-input" />
                        <button type="submit" class="search-button"><i class="fa fa-search"></i></button>
                    </form>
                </div>
                <div class="col-lg-4 text-right">
                    <a class="btn btn-success" asp-controller="AdminAccounts" asp-action="Create"><i class="far fa-plus-square m-r-5"></i>Thêm tài khoản</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Điện thoại</th>
                            <th>Lần đăng nhập cuối</th>
                            <th>Quyền truy cập</th>
                            <th>Trạng thái</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = (Model.PageNumber - 1) * Model.PageSize + 1;
                        }
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>
                                        <p><strong>@(item.FullName ?? "Chưa xác định")</strong></p>
                                    </td>
                                    <td>@(item.Email ?? "Chưa xác định")</td>
                                    <td>@(item.Phone ?? "Chưa xác định")</td>
                                    <td>@(item.LastLogin?.ToString("dd/MM/yyyy HH:mm:ss", CultureInfo.InvariantCulture) ?? "Chưa đăng nhập")</td>
                                    <td>@(item.Role?.Description ?? "Chưa xác định")</td>
                                    <td>
                                        @if (item.Active)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Block</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <a asp-action="Details" asp-route-id="@item.AccountId" class="btn btn-primary m-r-5"><i class="far fa-eye"></i></a>
                                            <a asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-edit btn-tone m-r-5"><i class="far fa-edit"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-delete btn-tone"><i class="far fa-trash-alt"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">Không có tài khoản nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Phân trang thủ công, chỉ hiển thị số trang -->
            @if (Model != null && Model.PageCount > 0)
            {
                <nav>
                    <ul class="pagination">
                        @{
                            int startPage = Math.Max(1, Model.PageNumber - 2); // Hiển thị 2 trang trước
                            int endPage = Math.Min(Model.PageCount, Model.PageNumber + 2); // Hiển thị 2 trang sau
                            if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = 1, searchString = ViewData["CurrentFilter"] })">1</a>
                                </li>
                                if (startPage > 2)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                            }
                            for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i, searchString = ViewData["CurrentFilter"] })">@i</a>
                                </li>
                            }
                            if (endPage < Model.PageCount)
                            {
                                if (endPage < Model.PageCount - 1)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.PageCount, searchString = ViewData["CurrentFilter"] })">@Model.PageCount</a>
                                </li>
                            }
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>