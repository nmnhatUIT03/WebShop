@model IEnumerable<WebShop.Models.Role>
@{
    int index = 1;
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap');

    body {
        background: #CBD5E0;
        font-family: 'Montserrat', sans-serif;
        color: #1A202C;
        font-weight: 400;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
        padding: 20px 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    .header-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.8rem;
        font-weight: 500;
        color: #1A202C;
        text-align: center;
    }

    .header-sub-title {
        text-align: center;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        color: #4A5568;
    }

    .breadcrumb-item {
        color: #4A5568;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item:hover {
            color: #f05a00;
        }

        .breadcrumb-item.active {
            color: #1A202C;
            font-weight: 500;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>';
            margin: 0 10px;
            color: #4A5568;
        }

    .card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 30px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #1A202C;
        font-family: 'Montserrat', sans-serif;
    }

        .table th,
        .table td {
            padding: 12px 15px;
            vertical-align: middle;
            border-top: 1px solid #E2E8F0;
        }

        .table thead th {
            background: #F7FAFC;
            font-weight: 500;
            color: #1A202C;
            border-bottom: 2px solid #E2E8F0;
        }

        .table tbody tr:hover {
            background: #F7FAFC;
        }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        padding: 8px 12px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 80px;
    }

        .btn i {
            margin-right: 5px;
            font-size: 1.1rem;
            line-height: 1;
        }

    .btn-create {
        background: #f05a00;
        border: none;
        color: #FFFFFF;
    }

        .btn-create:hover {
            background: #d94f00;
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    .btn-details {
        background: #1A202C;
        border: none;
        color: #FFFFFF;
    }

        .btn-details:hover {
            background: #2D3748;
            box-shadow: 0 6px 20px rgba(74, 85, 104, 0.5);
        }

    .btn-update {
        background: #4A5568;
        border: none;
        color: #FFFFFF;
    }

        .btn-update:hover {
            background: #2D3748;
            box-shadow: 0 6px 20px rgba(74, 85, 104, 0.5);
        }

    .btn-delete {
        background: #F56565;
        border: none;
        color: #FFFFFF;
    }

        .btn-delete:hover {
            background: #e53e3e;
            box-shadow: 0 6px 20px rgba(245, 101, 101, 0.5);
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    @@media (max-width: 767.98px) {
        .card-body {
            padding: 20px;
        }

        .btn {
            padding: 6px 12px;
            font-size: 0.7rem;
        }

            .btn i {
                font-size: 1rem;
            }

        .table th,
        .table td {
            padding: 8px 10px;
        }
    }

    @@media (max-width: 575.98px) {
        .page-header {
            padding: 15px 0;
        }

        .header-title {
            font-size: 1.5rem;
        }

        .breadcrumb {
            font-size: 0.8rem;
        }

        .card-body {
            padding: 15px;
        }

        .btn {
            padding: 6px 10px;
            font-size: 0.65rem;
        }

            .btn i {
                font-size: 0.9rem;
            }

        .table th,
        .table td {
            padding: 6px 8px;
            font-size: 0.75rem;
        }
    }
</style>

<div class="container">
    <div class="page-header">
        <h2 class="header-title">Quản lý quyền truy cập</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <span class="breadcrumb-item active">Danh sách quyền truy cập</span>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row m-b-30">
                        <div class="col-lg-8"></div>
                        <div class="col-lg-4 text-right">
                            <a class="btn btn-create btn-tone m-r-5" asp-controller="AdminRoles" asp-action="Create"><i class="far fa-plus-square m-r-5 fa-lg"></i>Thêm quyền</a>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">Tên quyền</th>
                                    <th scope="col">Mô tả</th>
                                    <th scope="col">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@index</th>
                                            <td>@item.RoleName</td>
                                            <td>@item.Description</td>
                                            <td>
                                                <a class="btn btn-details btn-tone m-r-5" asp-area="Admin" asp-controller="AdminRoles" asp-action="Details" asp-route-id="@item.RoleId"><i class="far fa-eye m-r-5 fa-lg"></i></a>
                                                <a class="btn btn-update btn-tone m-r-5" asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.RoleId"><i class="far fa-edit m-r-5 fa-lg"></i></a>
                                                <a class="btn btn-delete btn-tone m-r-5" asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete" asp-route-id="@item.RoleId"><i class="far fa-trash-alt m-r-5 fa-lg"></i></a>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/perfect-scrollbar/1.5.5/perfect-scrollbar.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize perfectScrollbar
            try {
                if (typeof $.fn.perfectScrollbar === 'function') {
                    $('.table-responsive').perfectScrollbar();
                } else {
                    console.warn('perfectScrollbar not loaded.');
                }
            } catch (e) {
                console.error('Error initializing perfectScrollbar:', e);
            }
        });
    </script>
}