@model WebShop.Models.Role
@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap');

    body {
        background: #CBD5E0;
        font-family: 'Montserrat', sans-serif;
        color: #1A202C;
        font-weight: 400;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
        padding: 20px 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    .header-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.8rem;
        font-weight: 500;
        color: #1A202C;
        text-align: center;
    }

    .header-sub-title {
        text-align: center;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        color: #4A5568;
    }

    .breadcrumb-item {
        color: #4A5568;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item:hover {
            color: #f05a00;
        }

        .breadcrumb-item.active {
            color: #1A202C;
            font-weight: 500;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>';
            margin: 0 10px;
            color: #4A5568;
        }

    .card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 30px;
    }

    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .control-label {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        font-weight: 500;
        color: #1A202C;
        margin-bottom: 8px;
    }

    .form-control {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        border-radius: 8px;
        border: 1px solid #CBD5E0;
        padding: 10px 15px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #f05a00;
            box-shadow: 0 0 8px rgba(240, 90, 0, 0.3);
            outline: none;
        }

        .form-control:disabled, .form-control[readonly] {
            background-color: #E2E8F0;
            cursor: not-allowed;
        }

        .form-control.is-updating {
            border-color: #f05a00;
            box-shadow: 0 0 8px rgba(240, 90, 0, 0.3);
        }

    .text-danger {
        font-size: 0.8rem;
        color: #F56565;
    }

    .form-control.is-invalid {
        border-color: #F56565;
    }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        padding: 8px 15px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-update {
        background: #f05a00;
        border: none;
        color: #FFFFFF;
    }

        .btn-update:hover {
            background: #d94f00;
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    .btn-back {
        background: #000000;
        border: none;
        color: #FFFFFF;
    }

        .btn-back:hover {
            background: #a8a8a8;
            box-shadow: 0 6px 20px rgba(245, 101, 101, 0.5);
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    .update-status {
        font-size: 0.8rem;
        margin-top: 10px;
        text-align: center;
        display: none;
    }

        .update-status.success {
            color: #28a745;
        }

        .update-status.error {
            color: #F56565;
        }

    @@media (max-width: 767.98px) {
        .card-body {
            padding: 20px;
        }

        .form-control {
            font-size: 0.8rem;
            padding: 8px 12px;
        }

        .btn {
            padding: 6px 12px;
            font-size: 0.7rem;
        }
    }

    @@media (max-width: 575.98px) {
        .page-header {
            padding: 15px 0;
        }

        .header-title {
            font-size: 1.5rem;
        }

        .breadcrumb {
            font-size: 0.8rem;
        }

        .card-body {
            padding: 15px;
        }

        .form-control {
            font-size: 0.75rem;
            padding: 6px 10px;
        }

        .btn {
            padding: 6px 10px;
            font-size: 0.65rem;
        }
    }
</style>

<div class="container">
    <div class="page-header">
        <h2 class="header-title">Chỉnh sửa quyền truy cập</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Danh sách quyền truy cập</a>
                <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập: @Model.RoleName</span>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form id="roleForm" asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="RoleId" />
                        <input type="hidden" id="OriginalRoleName" value="@Model.RoleName" />
                        <input type="hidden" id="OriginalDescription" value="@(Model.Description ?? "")" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="RoleName" class="control-label">Tên quyền</label>
                                    <input asp-for="RoleName" class="form-control" placeholder="Nhập tên quyền" value="@Model.RoleName" />
                                    <span asp-validation-for="RoleName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label">Mô tả</label>
                                    <input asp-for="Description" class="form-control" placeholder="Nhập mô tả" value="@Model.Description" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group text-center">
                                    <button type="button" class="btn btn-update btn-tone m-r-5" id="updateButton"><i class="far fa-edit m-r-5 fa-lg"></i>Lưu thay đổi</button>
                                    <a class="btn btn-back btn-tone m-r-5" asp-action="Index"><i class="fas fa-undo m-r-5 fa-lg"></i>Quay lại</a>
                                    <div class="update-status" id="RoleFormStatus"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/perfect-scrollbar/1.5.5/perfect-scrollbar.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Initialize perfectScrollbar
            try {
                if (typeof $.fn.perfectScrollbar === 'function') {
                    $('.card-body').perfectScrollbar();
                } else {
                    console.warn('perfectScrollbar not loaded.');
                }
            } catch (e) {
                console.error('Error initializing perfectScrollbar:', e);
            }

            // Store original values
            var originalValues = {
                RoleName: $('#OriginalRoleName').val(),
                Description: $('#OriginalDescription').val()
            };

            // Form validation
            $('#roleForm').validate({
                rules: {
                    RoleName: {
                        required: true,
                        minlength: 2
                    },
                    Description: {
                        required: true,
                        minlength: 2
                    }
                },
                messages: {
                    RoleName: {
                        required: "Vui lòng nhập tên quyền.",
                        minlength: "Tên quyền phải có ít nhất 2 ký tự."
                    },
                    Description: {
                        required: "Vui lòng nhập mô tả.",
                        minlength: "Mô tả phải có ít nhất 2 ký tự."
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('text-danger');
                    error.insertAfter(element);
                },
                highlight: function (element) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element) {
                    $(element).removeClass('is-invalid');
                }
            });

            // Handle update button click
            $('#updateButton').on('click', function () {
                if (!$('#roleForm').valid()) {
                    return;
                }

                var data = {
                    RoleId: $('#RoleId').val(),
                    RoleName: $('#roleForm #RoleName').val(),
                    Description: $('#roleForm #Description').val()
                };

                $('#roleForm .form-control').addClass('is-updating');
                $('#RoleFormStatus').hide().removeClass('success error').text('');

                $.ajax({
                    url: '@Url.Action("Edit", "AdminRoles", new { area = "Admin" })',
                    type: 'POST',
                    data: data,
                    headers: {
                        RequestVerificationToken: $('#roleForm input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        $('#RoleFormStatus').show();
                        if (response.success) {
                            $('#RoleFormStatus').addClass('success').text('Cập nhật quyền truy cập thành công!').show();
                            $('#roleForm .form-control').removeClass('is-invalid').next('.text-danger').text('');
                            if (data.RoleName) {
                                originalValues.RoleName = data.RoleName;
                                $('#OriginalRoleName').val(data.RoleName);
                            }
                            if (data.Description) {
                                originalValues.Description = data.Description;
                                $('#OriginalDescription').val(data.Description);
                            }
                            setTimeout(function () {
                                $('#RoleFormStatus').fadeOut(2000, function () {
                                    window.location.href = '@Url.Action("Index", "AdminRoles", new { area = "Admin" })';
                                });
                            }, 2000);
                        } else {
                            $('#RoleFormStatus').addClass('error').text(response.message).show();
                            if (response.field) {
                                $('#roleForm #' + response.field).addClass('is-invalid');
                                $('#roleForm #' + response.field).next('.text-danger').text(response.message);
                            }
                            setTimeout(function () {
                                $('#RoleFormStatus').fadeOut(2000);
                            }, 4000);
                        }
                    },
                    error: function (xhr) {
                        var message = xhr.responseJSON?.message || 'Lỗi hệ thống khi cập nhật quyền truy cập.';
                        $('#RoleFormStatus').show().addClass('error').text(message);
                        setTimeout(function () {
                            $('#RoleFormStatus').fadeOut(2000);
                        }, 4000);
                    },
                    complete: function () {
                        $('#roleForm .form-control').removeClass('is-updating');
                    }
                });
            });
        });
    </script>
}