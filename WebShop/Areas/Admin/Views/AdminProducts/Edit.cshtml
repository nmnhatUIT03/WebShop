    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#SizeIds, #ColorIds').select2({
                placeholder: "Chọn tùy chọn",
                allowClear: true,
                dropdownParent: $('#product-edit-variants')
            });

            try {
                var colorOptions = @Html.Raw(ViewBag.ColorOptionsJson ?? "[]");
                var sizeOptions = @Html.Raw(ViewBag.SizeOptionsJson ?? "[]");
                console.log("Color Options:", colorOptions);
                console.log("Size Options:", sizeOptions);
                var selectedSizeId = $('#SizeIds').val();
                var selectedColorId = $('#ColorIds').val();
                console.log("Selected Size ID:", selectedSizeId);
                console.log("Selected Color ID:", selectedColorId);
                console.log("Size M found:", sizeOptions.find(s => s.name === 'M' || s.id.toString() === selectedSizeId));
                console.log("Color Be found:", colorOptions.find(c => c.name === 'Be' || c.id.toString() === selectedColorId));
            } catch (e) {
                console.error("Lỗi khi parse JSON:", e);
                alert("Lỗi khi tải dữ liệu kích thước/màu sắc. Vui lòng kiểm tra database.");
            }

            window.previewImage = function (event) {
                var input = event.target;
                var preview = document.getElementById('imagePreview');
                var current = document.getElementById('currentImage');
                var error = document.getElementById('imageError');

                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        preview.src = e.target.result;
                        preview.style.display = 'block';
                        if (current) current.style.display = 'none';
                        error.style.display = 'none';
                    };
                    if (input.files[0].type.startsWith('image/')) {
                        reader.readAsDataURL(input.files[0]);
                    } else {
                        error.style.display = 'block';
                        preview.style.display = 'none';
                        if (current) current.style.display = 'block';
                    }
                } else {
                    preview.style.display = 'none';
                    if (current) current.style.display = 'block';
                    error.style.display = 'none';
                }
            };

            window.generateVariants = function () {
                try {
                    $('#sizeIdsError').text('');
                    $('#colorIdsError').text('');
                    $('#defaultStockError').text('');

                    var selectedSizes = $('#SizeIds').val() || [];
                    var selectedColors = $('#ColorIds').val() || [];
                    var defaultStock = parseInt($('#DefaultStock').val()) || 0;

                    console.log('GenerateVariants data:', {
                        productId: @Model.ProductId,
                        SizeIds: selectedSizes,
                        ColorIds: selectedColors,
                        DefaultStock: defaultStock
                    });

                    if (selectedSizes.length === 0) {
                        $('#sizeIdsError').text('Vui lòng chọn ít nhất một kích thước.');
                        console.log('Validation error: No sizes selected');
                        return;
                    }
                    if (selectedColors.length === 0) {
                        $('#colorIdsError').text('Vui lòng chọn ít nhất một màu sắc.');
                        console.log('Validation error: No colors selected');
                        return;
                    }
                    if (defaultStock < 0) {
                        $('#defaultStockError').text('Số lượng tồn kho không được nhỏ hơn 0.');
                        console.log('Validation error: Invalid stock');
                        return;
                    }

                    var variantRows = $('#variantRows');
                    var existingVariants = [];
                    variantRows.find('tr').each(function () {
                        var colorId = $(this).find('input[name*="ColorId"]').val();
                        var sizeId = $(this).find('input[name*="SizeId"]').val();
                        var stockInput = $(this).find('.stock-input');
                        var stock = parseInt(stockInput.val()) || 0;
                        if (colorId && sizeId) {
                            existingVariants.push({ colorId: colorId, sizeId: sizeId, stock: stock, row: $(this) });
                        }
                    });

                    var newIndex = variantRows.find('tr').length;
                    var updatedVariants = [];
                    var newRows = '';

                    selectedSizes.forEach(function (sizeId) {
                        selectedColors.forEach(function (colorId) {
                            var size = sizeOptions.find(s => s.id.toString() === sizeId.toString());
                            var color = colorOptions.find(c => c.id.toString() === colorId.toString());
                            var variantKey = `${colorId}-${sizeId}`;

                            var existingVariant = existingVariants.find(v => v.colorId === colorId && v.sizeId === sizeId);
                            if (existingVariant) {
                                var newStock = existingVariant.stock + defaultStock;
                                existingVariant.row.find('.stock-input').val(newStock).trigger('change');
                                updatedVariants.push({ productDetailId: existingVariant.row.find('input[name*="ProductDetailId"]').val() || 0, stock: newStock });
                            } else {
                                newRows += `
                                    <tr>
                                        <td>${color ? color.name : "Không xác định"}<input type="hidden" name="ProductDetails[${newIndex}].ColorId" value="${color ? color.id : colorId}" /><input type="hidden" name="ProductDetails[${newIndex}].ProductDetailId" value="0" /></td>
                                        <td>${size ? size.name : "Không xác định"}<input type="hidden" name="ProductDetails[${newIndex}].SizeId" value="${size ? size.id : sizeId}" /></td>
                                        <td><input type="number" name="ProductDetails[${newIndex}].Stock" class="form-control stock-input" min="0" value="${defaultStock}" /></td>
                                        <td><input type="checkbox" name="ProductDetails[${newIndex}].Active" ${defaultStock > 0 ? 'checked' : ''} /></td>
                                        <td><button type="button" class="btn btn-primary btn-sm update-variant" data-product-detail-id="0" data-product-id="@Model.ProductId">Cập nhật tổng</button></td>
                                    </tr>`;
                                newIndex++;
                            }
                        });
                    });

                    if (newRows || updatedVariants.length > 0) {
                        if (variantRows.find('tr td[colspan="5"]').length > 0) {
                            variantRows.empty();
                        }
                        if (newRows) {
                            variantRows.append(newRows);
                        }
                        updateTotalStock();
                    } else {
                        alert('Không có biến thể mới để thêm hoặc các biến thể đã tồn tại.');
                        return;
                    }

                    var formData = new FormData();
                    formData.append('productId', @Model.ProductId);
                    selectedSizes.forEach(function (sizeId) {
                        formData.append('SizeIds[]', sizeId);
                    });
                    selectedColors.forEach(function (colorId) {
                        formData.append('ColorIds[]', colorId);
                    });
                    formData.append('DefaultStock', defaultStock);
                    updatedVariants.forEach(function (v, index) {
                        formData.append(`UpdatedVariants[${index}].ProductDetailId`, v.productDetailId);
                        formData.append(`UpdatedVariants[${index}].Stock`, v.stock);
                    });
                    formData.append('__RequestVerificationToken', $('input[name="__RequestVerificationToken"]').val());

                    console.log('FormData:', Array.from(formData.entries()));

                    $.ajax({
                        url: '@Url.Action("AddVariants", "AdminProducts", new { area = "Admin" })',
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        timeout: 10000,
                        beforeSend: function () {
                            console.log('Sending AJAX request to AddVariants...');
                        },
                        success: function (response) {
                            console.log('AddVariants response:', response);
                            if (response.success) {
                                $('#variantRows').html(response.variantRows);
                                $('#SizeIds').val(null).trigger('change');
                                $('#ColorIds').val(null).trigger('change');
                                $('#DefaultStock').val(0);
                                $('#UnitsInStock').val(response.totalStock);
                                if (response.newVariantsCount > 0) {
                                    alert('Thêm ' + response.newVariantsCount + ' biến thể mới thành công.');
                                } else if (response.updatedVariantsCount > 0) {
                                    alert('Cập nhật số lượng cho ' + response.updatedVariantsCount + ' biến thể hiện có.');
                                } else {
                                    alert('Không có thay đổi nào.');
                                }
                            } else {
                                alert('Lỗi: ' + response.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            console.log('AddVariants AJAX error:', {
                                status: status,
                                error: error,
                                responseText: xhr.responseText
                            });
                            if (status === 'timeout') {
                                alert('Yêu cầu thêm biến thể mất quá nhiều thời gian. Vui lòng thử lại.');
                            } else {
                                alert('Lỗi khi thêm biến thể: ' + (xhr.responseJSON?.message || error));
                            }
                        }
                    });
                } catch (e) {
                    console.error("Lỗi khi tạo biến thể:", e);
                    alert("Lỗi khi tạo biến thể: " + e.message);
                }
            };

            window.clearVariants = function () {
                $('#variantRows').html('<tr><td colspan="5">Không có biến thể nào.</td></tr>');
                $('#SizeIds').val(null).trigger('change');
                $('#ColorIds').val(null).trigger('change');
                $('#DefaultStock').val(0);
                updateTotalStock();
            };

            function updateTotalStock() {
                var totalStock = 0;
                $('#variantRows .stock-input').each(function () {
                    var stock = parseInt($(this).val()) || 0;
                    var isActive = $(this).closest('tr').find('input[type="checkbox"]').is(':checked');
                    if (isActive && stock > 0) {
                        totalStock += stock;
                    }
                });
                $('#UnitsInStock').val(totalStock);
            }

            $(document).on('click', '.update-variant', function () {
                var productDetailId = $(this).data('product-detail-id');
                var productId = $(this).data('product-id');
                var stockInput = $(this).closest('tr').find('.stock-input');
                var stock = parseInt(stockInput.val()) || 0;

                console.log('UpdateStock data:', { productDetailId: productDetailId, stock: stock });

                if (stock < 0) {
                    alert('Số lượng tồn kho không được nhỏ hơn 0.');
                    return;
                }

                if (productDetailId !== 0) {
                    $.ajax({
                        url: '@Url.Action("UpdateStock", "AdminProducts", new { area = "Admin" })',
                        type: 'POST',
                        data: {
                            productDetailId: productDetailId,
                            stock: stock,
                            '__RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (response) {
                            console.log('UpdateStock response:', response);
                            if (response.success) {
                                stockInput.val(response.newStock);
                                $('#UnitsInStock').val(response.totalStock);
                                stockInput.closest('tr').find('input[type="checkbox"]').prop('checked', response.newStock > 0);
                                alert('Cập nhật số lượng tồn kho thành công.');
                            } else {
                                alert('Lỗi: ' + response.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            console.log('UpdateStock AJAX error:', xhr.responseText);
                            alert('Lỗi khi cập nhật số lượng: ' + error);
                        }
                    });
                } else {
                    updateTotalStock();
                }
            });

            $(document).on('change', '.stock-input, input[type="checkbox"]', updateTotalStock);

            $('#productForm').on('submit', function (e) {
                console.log('ProductForm submit triggered');
                $('#SizeIds, #ColorIds, #DefaultStock').removeAttr('required');
            });
        });
    </script>
}