
@using System.Web
@model WebShop.Models.Product

@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- CSS tùy chỉnh -->
<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap');

    body {
        background: #CBD5E0;
        font-family: 'Montserrat', sans-serif;
        color: #1A202C;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    /* Tiêu đề trang */
    .page-header {
        background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
        padding: 30px 20px; /* Padding giống Edit.cshtml */
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    .header-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #1A202C;
        text-align: center;
    }

    .header-sub-title {
        margin-top: 10px;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 10px 0 0;
        font-size: 0.9rem;
        color: #4A5568;
    }

    .breadcrumb-item {
        color: #4A5568;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item:hover {
            color: #f05a00;
        }

        .breadcrumb-item.active {
            color: #1A202C;
            font-weight: 500;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>';
            margin: 0 10px;
            color: #4A5568;
        }

    /* Card */
    .card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 30px;
    }

    /* Form */
    .form-group {
        margin-bottom: 20px;
    }

    .form-control, .custom-select {
        background: #EDF2F7;
        border: 1px solid rgba(240, 90, 0, 0.4);
        border-radius: 8px;
        padding: 10px 15px;
        font-size: 0.9rem;
        color: #1A202C;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus, .custom-select:focus {
            border-color: #f05a00;
            box-shadow: 0 0 8px rgba(240, 90, 0, 0.5);
            outline: none;
        }

    .form-control-file {
        padding: 10px;
    }

    .text-danger {
        font-size: 0.85rem;
        margin-top: 5px;
    }

    /* Checkbox */
    .form-check-input {
        margin-top: 0.3rem;
    }

    .form-check-label {
        font-size: 0.9rem;
        color: #1A202C;
    }

    /* Tabs */
    .nav-tabs {
        border-bottom: 2px solid rgba(240, 90, 0, 0.4);
    }

        .nav-tabs .nav-link {
            font-family: 'Montserrat', sans-serif;
            font-size: 0.9rem;
            color: #4A5568;
            padding: 10px 20px;
            border: none;
            border-bottom: 3px solid transparent;
            transition: all 0.3s ease;
        }

            .nav-tabs .nav-link:hover {
                color: #f05a00;
                border-bottom: 3px solid #f05a00;
            }

            .nav-tabs .nav-link.active {
                color: #1A202C;
                font-weight: 500;
                border-bottom: 3px solid #f05a00;
            }

    /* Nút */
    .btn {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        padding: 10px 20px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-primary {
        background: #f05a00; /* Màu cam */
        border: none;
        color: #FFFFFF;
    }

        .btn-primary:hover {
            background: #d04e00; /* Màu cam đậm hơn khi hover */
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    .btn-secondary {
        background: #f05a00; /* Màu cam */
        border: none;
        color: #FFFFFF;
    }

        .btn-secondary:hover {
            background: #d04e00; /* Màu cam đậm hơn khi hover */
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    /* Select2 */
    .select2-container--default .select2-selection--multiple {
        background: #EDF2F7;
        border: 1px solid rgba(240, 90, 0, 0.4);
        border-radius: 8px;
        padding: 5px;
    }

        .select2-container--default .select2-selection--multiple .select2-selection__choice {
            background: #f05a00;
            color: #FFFFFF;
            border: none;
            border-radius: 4px;
        }

        .select2-container--default .select2-selection--multiple .select2-selection__choice__remove {
            color: #FFFFFF;
        }

    /* Responsive */
    @@media (max-width: 767.98px) {
        .card-body {
            padding: 20px;
        }

        .btn {
            padding: 8px 15px;
            font-size: 0.7rem;
        }

        .form-control, .custom-select {
            font-size: 0.8rem;
            padding: 8px 12px;
        }

        .header-title {
            font-size: 1.5rem;
        }

        .row {
            flex-direction: column;
        }

        .col-md-6 {
            width: 100%;
            margin-bottom: 20px;
        }
    }

    @@media (max-width: 575.98px) {
        .page-header {
            padding: 20px 15px; /* Padding cho màn hình nhỏ */
        }

        .breadcrumb {
            font-size: 0.8rem;
        }

        .card-body {
            padding: 15px;
        }

        .btn {
            padding: 6px 12px;
            font-size: 0.65rem;
        }

        .form-control, .custom-select {
            font-size: 0.75rem;
            padding: 6px 10px;
        }
    }
</style>

<form asp-controller="AdminProducts" asp-action="Create" method="post" enctype="multipart/form-data" id="productForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="page-header">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div>
                <h2 class="header-title">Thêm sản phẩm</h2>
                <div class="header-sub-title">
                    <nav class="breadcrumb breadcrumb-dash">
                        <a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                        <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Danh sách sản phẩm</a>
                        <span class="breadcrumb-item active">Thêm sản phẩm</span>
                    </nav>
                </div>
            </div>
            <div class="m-b-15">
                <button type="submit" class="btn btn-primary">
                    <i class="far fa-save m-r-5 fa-lg"></i>
                    <span>Lưu</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin cơ bản</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-option">Thông tin thêm</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-description">Mô tả</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-variants">Biến thể</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="ProductName">Tên sản phẩm *</label>
                        <input type="text" class="form-control" asp-for="ProductName" required>
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="ShortDesc">Mô tả ngắn *</label>
                        <input type="text" class="form-control" asp-for="ShortDesc" required>
                        <span asp-validation-for="ShortDesc" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="Price">Giá bán *</label>
                            <input type="number" class="form-control" asp-for="Price" required min="0" step="1">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="Discount">Giá giảm (%)</label>
                            <input type="number" class="form-control" asp-for="Discount" min="0" max="100" step="1">
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="CatId">Danh mục sản phẩm *</label>
                            <select class="custom-select" asp-for="CatId" required asp-items="ViewBag.DanhMuc">
                                <option value="" disabled>Chọn danh mục</option>
                            </select>
                            <span asp-validation-for="CatId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="SupplierId">Nhà cung cấp *</label>
                            @if (ViewBag.Supplier != null && ((IEnumerable<SelectListItem>)ViewBag.Supplier).Any())
                            {
                                <select class="custom-select" asp-for="SupplierId" required asp-items="ViewBag.Supplier">
                                    <option value="" disabled>Chọn nhà cung cấp</option>
                                </select>
                            }
                            else
                            {
                                <p class="text-danger">Không có nhà cung cấp nào. Vui lòng thêm nhà cung cấp trước.</p>
                                <select class="custom-select" asp-for="SupplierId" disabled>
                                    <option value="" disabled>Không có nhà cung cấp</option>
                                </select>
                            }
                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="UnitsInStock">Tổng hàng tồn</label>
                            <input type="number" class="form-control" asp-for="UnitsInStock" readonly>
                            <span asp-validation-for="UnitsInStock" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="fThumb">Ảnh sản phẩm</label>
                            <input name="fThumb" type="file" class="form-control-file" accept="image/*" id="fThumb" onchange="previewImage(event)">
                            <img id="imagePreview" style="max-width: 133.34px; max-height: 133.34px; object-fit: contain; margin-top: 10px; display: none;" alt="Ảnh preview" />
                            <span id="imageError" class="text-danger" style="display: none;">Vui lòng chọn file ảnh hợp lệ.</span>
                            <span asp-validation-for="Thumb" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="Chatlieu">Chất liệu</label>
                            <input type="text" class="form-control" asp-for="Chatlieu">
                            <span asp-validation-for="Chatlieu" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="Songan">Số gân</label>
                            <input type="text" class="form-control" asp-for="Songan">
                            <span asp-validation-for="Songan" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="BestSellers">Sản phẩm bán chạy</label>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" asp-for="BestSellers" id="BestSellers">
                            <label class="form-check-label" for="BestSellers">Đặt làm sản phẩm bán chạy</label>
                        </div>
                        <span asp-validation-for="BestSellers" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="Active">Kích hoạt sản phẩm</label>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" asp-for="Active" id="Active" checked>
                            <label class="form-check-label" for="Active">Kích hoạt</label>
                        </div>
                        <span asp-validation-for="Active" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="Title">Tiêu đề</label>
                        <input type="text" class="form-control" asp-for="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="MetaDesc">Meta Description</label>
                        <input type="text" class="form-control" asp-for="MetaDesc">
                        <span asp-validation-for="MetaDesc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="MetaKey">Meta Keywords</label>
                        <input type="text" class="form-control" asp-for="MetaKey">
                        <span asp-validation-for="MetaKey" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="Tags">Tags</label>
                        <input type="text" class="form-control" asp-for="Tags">
                        <span asp-validation-for="Tags" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-description">
            <div class="card">
                <div class="card-body">
                    <label class="font-weight-semibold" for="Description">Mô tả sản phẩm</label>
                    <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-variants">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold">Kích thước *</label>
                        <select multiple class="form-control select2" asp-for="SizeIds" required asp-items="ViewBag.Sizes">
                            <option value="" disabled>Chọn kích thước</option>
                        </select>
                        <span asp-validation-for="SizeIds" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold">Màu sắc *</label>
                        <select multiple class="form-control select2" asp-for="ColorIds" required asp-items="ViewBag.Colors">
                            <option value="" disabled>Chọn màu sắc</option>
                        </select>
                        <span asp-validation-for="ColorIds" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold">Số lượng tồn cho mỗi biến thể</label>
                        <input type="number" class="form-control" asp-for="DefaultStock" min="0" value="0" required>
                        <span asp-validation-for="DefaultStock" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="text-left mt-3">
    <a class="btn btn-primary" asp-action="Index"><i class="fas fa-undo m-r-5 fa-lg"></i>Quay lại</a>
</div>
<canvas id="expectedCanvasId" style="display: none;"></canvas>

@section Scripts {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-rc.0/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#SizeIds, #ColorIds').select2({
                placeholder: "Chọn một hoặc nhiều giá trị",
                allowClear: true,
                dropdownParent: $('#product-edit-variants')
            });

            $('#productForm').on('submit', function (e) {
                const sizeIds = $('#SizeIds').val() || [];
                const colorIds = $('#ColorIds').val() || [];
                const defaultStock = parseInt($('#DefaultStock').val()) || 0;
                const totalVariants = sizeIds.length * colorIds.length;

                console.log('Form data before submit:', {
                    SizeIds: sizeIds,
                    ColorIds: colorIds,
                    DefaultStock: defaultStock,
                    TotalVariants: totalVariants
                });

                if (sizeIds.length === 0 || colorIds.length === 0) {
                    if (sizeIds.length === 0) $('#SizeIds').next('.select2-container').after('<span class="text-danger">Vui lòng chọn ít nhất một kích thước.</span>');
                    if (colorIds.length === 0) $('#ColorIds').next('.select2-container').after('<span class="text-danger">Vui lòng chọn ít nhất một màu sắc.</span>');
                    e.preventDefault();
                    return false;
                }
                if (defaultStock < 0) {
                    alert('Số lượng tồn kho phải là số không âm.');
                    e.preventDefault();
                    return false;
                }
            });

            window.previewImage = function (event) {
                const input = event.target;
                const preview = document.getElementById('imagePreview');
                const error = document.getElementById('imageError');
                preview.style.display = 'none';
                error.style.display = 'none';
                if (input.files && input.files[0]) {
                    const file = input.files[0];
                    if (!file.type.startsWith('image/')) {
                        error.style.display = 'block';
                        input.value = '';
                        return;
                    }
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        preview.src = e.target.result;
                        preview.style.display = 'block';
                    };
                    reader.onerror = function () {
                        error.style.display = 'block';
                    };
                    reader.readAsDataURL(file);
                }
            };
        });
    </script>
}