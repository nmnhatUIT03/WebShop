@model WebShop.Models.Order
@using Microsoft.AspNetCore.Mvc.Rendering
@using System.Collections.Generic

@{
    ViewData["Title"] = "Sửa đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<OrderDetail> orderDetails = ViewBag.OrderDetails;
    var customerIdList = ViewBag.CustomerId as List<SelectListItem> ?? new List<SelectListItem>();
    bool isGuest = customerIdList.Any(c => c.Selected && c.Text == "Khách vãng lai (do admin tạo)");
    string orderDateValue = Model.OrderDate.HasValue ? Model.OrderDate.Value.ToString("yyyy-MM-ddTHH:mm") : "";
    string shipDateValue = Model.ShipDate.HasValue ? Model.ShipDate.Value.ToString("yyyy-MM-ddTHH:mm") : "";
    string paymentDateValue = Model.PaymentDate.HasValue ? Model.PaymentDate.Value.ToString("yyyy-MM-ddTHH:mm") : "";
    string totalMoneyValue = Model.TotalMoney.HasValue ? String.Format("{0:#,##0}", Model.TotalMoney.Value) : "0";
    var promotionList = ViewBag.PromotionId as IEnumerable<SelectListItem> ?? new List<SelectListItem>();
    string promotionDisplay = Model.PromotionId.HasValue ? promotionList.FirstOrDefault(p => p.Value == Model.PromotionId.ToString())?.Text ?? "Chưa áp dụng chương trình khuyến mãi" : "Chưa áp dụng chương trình khuyến mãi";
}

<style>
    body {
        background: #FFFFFF;
        font-family: 'Montserrat', sans-serif;
        color: #000000;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: #F8F9FA;
        padding: 20px 0;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .header-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #333;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-size: 0.9rem;
        color: #666;
    }

    .breadcrumb-item {
        color: #666;
        text-decoration: none;
    }

        .breadcrumb-item:hover {
            color: #007BFF;
        }

        .breadcrumb-item.active {
            color: #000;
            font-weight: 500;
        }

    .card {
        background: #FFFFFF;
        border-radius: 8px;
        border: 1px solid #E9ECEF;
        margin-bottom: 20px;
    }

    .card-body {
        padding: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control, .form-select {
        border: 1px solid #CED4DA;
        border-radius: 4px;
        padding: 8px 12px;
        font-size: 0.9rem;
        cursor: pointer !important;
        width: 100%;
        appearance: menulist !important;
        -webkit-appearance: menulist !important;
        -moz-appearance: menulist !important;
    }

        .form-control:focus, .form-select:focus {
            border-color: #007BFF;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
            outline: none;
        }

        .form-select:disabled, .form-control:disabled {
            cursor: not-allowed;
            background-color: #f8f9fa;
            opacity: 0.7;
        }

    .btn {
        padding: 8px 15px;
        border-radius: 4px;
        font-size: 0.9rem;
        cursor: pointer;
    }

    .btn-info {
        background: #007BFF;
        border: none;
        color: #FFF;
    }

        .btn-info:hover {
            background: #0056B3;
        }

    .btn-warning {
        background: #FFC107;
        border: none;
        color: #FFF;
    }

        .btn-warning:hover {
            background: #E0A800;
        }

    .btn-danger {
        background: #DC3545;
        border: none;
        color: #FFF;
    }

        .btn-danger:hover {
            background: #C82333;
        }

    .btn-success {
        background: #28A745;
        border: none;
        color: #FFF;
    }

        .btn-success:hover {
            background: #218838;
        }

    .text-danger {
        color: #DC3545;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .table .form-select, .table .form-control {
        width: 100%;
    }

    .total-money {
        font-size: 1.2rem;
        font-weight: 700;
        color: #333;
    }

    @@media (max-width: 767.98px) {
        .card-body

    {
        padding: 15px;
    }

    .form-control, .form-select {
        font-size: 0.85rem;
    }

    .btn {
        padding: 6px 12px;
        font-size: 0.85rem;
    }

    }
</style>

<div class="page-header">
    <h2 class="header-title">Sửa đơn hàng</h2>
    <nav class="breadcrumb breadcrumb-dash">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminOrders" asp-action="Index">Danh sách đơn hàng</a>
        <span class="breadcrumb-item active">Sửa đơn hàng</span>
    </nav>
</div>

<div class="container">
    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post" id="orderForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="OrderId" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CustomerId" class="control-label">Tài khoản</label>
                            <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId" disabled="disabled">
                                <option value="">Khách vãng lai</option>
                            </select>
                            <input type="hidden" asp-for="CustomerId" />
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ReceiverName" class="control-label">Tên người nhận *</label>
                            <input asp-for="ReceiverName" class="form-control" required />
                            <span asp-validation-for="ReceiverName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="OrderDate" class="control-label">Ngày mua *</label>
                            <input asp-for="OrderDate" class="form-control" type="datetime-local" readonly value="@orderDateValue" />
                            <span asp-validation-for="OrderDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ShipDate" class="control-label">Ngày giao hàng</label>
                            <input asp-for="ShipDate" class="form-control" type="datetime-local" readonly value="@shipDateValue" />
                            <span asp-validation-for="ShipDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TransactStatusId" class="control-label">Trạng thái đơn hàng *</label>
                            <select asp-for="TransactStatusId" class="form-control" asp-items="ViewBag.TransactStatusId" required></select>
                            <span asp-validation-for="TransactStatusId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PromotionId" class="control-label">Khuyến mãi</label>
                            <select asp-for="PromotionId" class="form-control" id="PromotionId" disabled="disabled">
                                <option value="@(Model.PromotionId?.ToString() ?? "")" selected>@promotionDisplay</option>
                                <option value="">Chương trình khuyến mãi không còn khả dụng</option>
                            </select>
                            <input type="hidden" asp-for="PromotionId" id="promotionIdInput" />
                            <span asp-validation-for="PromotionId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="VoucherId" class="control-label">Voucher</label>
                            <select asp-for="VoucherId" class="form-control" asp-items="ViewBag.VoucherId" disabled="disabled">
                                <option value="">Không chọn</option>
                            </select>
                            <input type="hidden" asp-for="VoucherId" />
                            <span asp-validation-for="VoucherId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Paid" class="control-label">Đã thanh toán</label>
                            <input asp-for="Paid" class="form-control" type="checkbox" />
                            <span asp-validation-for="Paid" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PaymentDate" class="control-label">Ngày thanh toán</label>
                            <input asp-for="PaymentDate" class="form-control" type="datetime-local" value="@paymentDateValue" />
                            <span asp-validation-for="PaymentDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Note" class="control-label">Ghi chú</label>
                            <input asp-for="Note" class="form-control" />
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Address" class="control-label">Địa chỉ *</label>
                            <input asp-for="Address" class="form-control" required />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <h4>Chi tiết đơn hàng</h4>
                        <table class="table table-bordered" id="orderDetailsTable">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Kích thước</th>
                                    <th>Màu sắc</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Thành tiền</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (orderDetails != null && orderDetails.Any())
                                {
                                    foreach (var detail in orderDetails)
                                    {
                                        var productName = $"{detail.ProductDetail?.Product?.ProductName}";
                                        var sizeName = $"{detail.ProductDetail?.Size?.SizeName ?? "Không xác định"}";
                                        var colorName = $"{detail.ProductDetail?.Color?.ColorName ?? "Không xác định"}";
                                        var subtotal = (detail.Quantity ?? 0) * (detail.Price ?? 0);
                                        <tr>
                                            <td>
                                                @productName
                                                <input type="hidden" name="ProductDetailIds[]" value="@detail.ProductDetailId" />
                                            </td>
                                            <td>@sizeName</td>
                                            <td>@colorName</td>
                                            <td>
                                                <input type="hidden" name="Quantities[]" value="@(detail.Quantity ?? 0)" />
                                                @(detail.Quantity ?? 0)
                                            </td>
                                            <td>
                                                <input type="hidden" name="Prices[]" value="@(detail.Price ?? 0)" />
                                                @String.Format("{0:#,##0}", (detail.Price ?? 0))
                                            </td>
                                            <td>
                                                <input type="hidden" class="total-input" value="@subtotal" />
                                                @String.Format("{0:#,##0}", subtotal)
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-danger remove-item">Xóa</button>
                                            </td>
                                        </tr>
                                    }
                                }
                                <tr class="new-item">
                                    <td>
                                        <select class="form-select product-select" name="newProductId[]">
                                            <option value="">Chọn sản phẩm</option>
                                            @if (ViewBag.Products != null)
                                            {
                                                @foreach (var product in ViewBag.Products as SelectList)
                                                {
                                                    <option value="@product.Value">@product.Text</option>
                                                }
                                            }
                                            else
                                            {
                                                <option value="" disabled>Không có sản phẩm</option>
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <select class="form-select size-select" name="newSizeId[]" disabled>
                                            <option value="">Chọn kích thước</option>
                                        </select>
                                    </td>
                                    <td>
                                        <select class="form-select color-select" name="newColorId[]" disabled>
                                            <option value="">Chọn màu sắc</option>
                                        </select>
                                    </td>
                                    <td>
                                        <input type="number" class="form-control quantity-input" name="newQuantity[]" min="1" value="1" disabled />
                                    </td>
                                    <td>
                                        <input type="number" class="form-control price-input" name="newPrice[]" readonly value="0" />
                                    </td>
                                    <td>
                                        <input type="number" class="form-control total-input" readonly value="0" />
                                    </td>
                                    <td>
                                        <input type="hidden" class="product-detail-id" name="ProductDetailIds[]" value="" />
                                        <button type="button" class="btn btn-info add-item">Thêm</button>
                                        <button type="button" class="btn btn-danger remove-row">Xóa</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="total-money mt-3">
                            Tổng tiền: <span id="totalMoney">@totalMoneyValue</span> VNĐ
                        </div>
                        <input type="hidden" asp-for="TotalMoney" id="totalMoneyInput" value="@totalMoneyValue" />
                    </div>
                    <div class="col-md-12 text-center mt-4">
                        <div class="form-group">
                            <button type="submit" class="btn btn-info m-r-5" style="background-color: #F05A00; border: none; color: #FFF;"><i class="far fa-save m-r-5 fa-lg"></i>Cập nhật</button>
                            <a class="btn btn-warning m-r-5" style="background-color: #000000; border: none; color: #FFF;" asp-action="Index"><i class="fas fa-undo m-r-5 fa-lg"></i>Quay lại</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            console.log('Document ready');

            let variants = [];
            try {
                variants = JSON.parse('@Html.Raw(ViewBag.Variants)') || [];
                console.log('Parsed variants:', variants);
            } catch (e) {
                console.error('Lỗi khi parse variants:', e);
                console.log('Using empty variants list as fallback');
                variants = [];
            }

            let originalProductDetailIds = [];
            $('#orderDetailsTable tr:not(.new-item)').each(function () {
                let productDetailId = $(this).find('input[name="ProductDetailIds[]"]').val();
                if (productDetailId) {
                    originalProductDetailIds.push(parseInt(productDetailId));
                }
            });
            console.log('Original ProductDetailIds:', originalProductDetailIds);

            let hasWarned = false; // Cờ để theo dõi trạng thái cảnh báo

            function showToast(message, type = 'success') {
                alert(message); // Thay bằng thư viện như toastr nếu cần
            }

            function calculateTotal() {
                let total = 0;
                $('#orderDetailsTable tr:not(.new-item)').each(function () {
                    let subtotal = parseFloat($(this).find('.total-input').val()) || 0;
                    total += subtotal;
                });
                $('#totalMoney').text(total.toLocaleString('vi-VN'));
                $('#totalMoneyInput').val(total);
                console.log('Calculated total:', total);
            }

            function checkPromotionEligibility() {
                let currentProductDetailIds = [];
                $('#orderDetailsTable tr:not(.new-item)').each(function () {
                    let productDetailId = $(this).find('input[name="ProductDetailIds[]"]').val();
                    if (productDetailId) {
                        currentProductDetailIds.push(parseInt(productDetailId));
                    }
                });
                console.log('Current ProductDetailIds:', currentProductDetailIds);

                let promotionId = $('#PromotionId').val();
                let isProductChanged = JSON.stringify(currentProductDetailIds.sort()) !== JSON.stringify(originalProductDetailIds.sort());

                if (promotionId && isProductChanged && !hasWarned) {
                    $.ajax({
                        url: '/Admin/AdminOrders/CheckPromotionEligibility',
                        type: 'POST',
                        data: {
                            orderId: '@Model.OrderId',
                            productDetailIds: currentProductDetailIds,
                            promotionId: promotionId,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (response) {
                            if (!response.isEligible && promotionId) {
                                showToast('Chương trình khuyến mãi không còn khả dụng do sản phẩm không phù hợp.', 'warning');
                                $('#PromotionId').val('');
                                $('#promotionIdInput').val('');
                                $('#PromotionId option:selected').text('Chương trình khuyến mãi không còn khả dụng');
                                hasWarned = true; // Đặt cờ để ngăn cảnh báo lặp lại
                            }
                        },
                        error: function () {
                            if (!hasWarned) {
                                showToast('Lỗi khi kiểm tra khuyến mãi.', 'error');
                                hasWarned = true; // Đặt cờ để ngăn cảnh báo lặp lại
                            }
                        }
                    });
                } else if (!isProductChanged) {
                    hasWarned = false; // Đặt lại cờ khi danh sách sản phẩm trở về trạng thái ban đầu
                }
            }

            function loadSizes(productId, row) {
                if (!productId) {
                    row.find('.size-select').html('<option value="">Chọn kích thước</option>').prop('disabled', true);
                    row.find('.color-select').html('<option value="">Chọn màu sắc</option>').prop('disabled', true);
                    row.find('.quantity-input').prop('disabled', true).val(1);
                    row.find('.price-input').val(0);
                    row.find('.total-input').val(0);
                    row.find('.product-detail-id').val('');
                    calculateTotal();
                    return;
                }

                let uniqueSizes = [...new Map(
                    variants
                        .filter(v => v.ProductId == productId && v.SizeId !== 0 && v.SizeName !== "Không xác định")
                        .map(v => [v.SizeId, { SizeId: v.SizeId, SizeName: v.SizeName }])
                ).values()];

                let sizeSelect = row.find('.size-select');
                if (uniqueSizes.length > 0) {
                    let options = '<option value="">Chọn kích thước</option>';
                    uniqueSizes.forEach(size => {
                        options += `<option value="${size.SizeId}">${size.SizeName}</option>`;
                    });
                    sizeSelect.html(options).prop('disabled', false);
                } else {
                    showToast('Sản phẩm này hiện không có kích thước.', 'error');
                    sizeSelect.html('<option value="">Không có kích thước</option>').prop('disabled', true);
                }
            }

            function loadColors(productId, sizeId, row) {
                if (!productId || !sizeId) {
                    row.find('.color-select').html('<option value="">Chọn màu sắc</option>').prop('disabled', true);
                    row.find('.quantity-input').prop('disabled', true).val(1);
                    row.find('.price-input').val(0);
                    row.find('.total-input').val(0);
                    row.find('.product-detail-id').val('');
                    calculateTotal();
                    return;
                }

                let colors = variants
                    .filter(v => v.ProductId == productId && v.SizeId == sizeId && v.ColorId !== 0 && v.ColorName !== "Không xác định")
                    .map(v => ({ ColorId: v.ColorId, ColorName: v.ColorName }));

                let colorSelect = row.find('.color-select');
                if (colors.length > 0) {
                    let options = '<option value="">Chọn màu sắc</option>';
                    colors.forEach(color => {
                        options += `<option value="${color.ColorId}">${color.ColorName}</option>`;
                    });
                    colorSelect.html(options).prop('disabled', false);
                } else {
                    showToast('Biến thể này hiện không có màu sắc.', 'error');
                    colorSelect.html('<option value="">Không có màu sắc</option>').prop('disabled', true);
                }
            }

            function updateQuantityAndPrice(row) {
                let productId = row.find('.product-select').val();
                let sizeId = row.find('.size-select').val();
                let colorId = row.find('.color-select').val();

                let quantityInput = row.find('.quantity-input');
                let priceInput = row.find('.price-input');
                let totalInput = row.find('.total-input');
                let productDetailIdInput = row.find('.product-detail-id');

                if (productId && sizeId && colorId) {
                    let variant = variants.find(v => v.ProductId == productId && v.SizeId == sizeId && v.ColorId == colorId);
                    if (variant) {
                        quantityInput.prop('disabled', false).val(1);
                        priceInput.val(variant.Price || 0);
                        quantityInput.attr('max', variant.Stock || 0);
                        let quantity = parseInt(quantityInput.val()) || 1;
                        totalInput.val(quantity * (variant.Price || 0));
                        productDetailIdInput.val(variant.ProductDetailId);
                    } else {
                        showToast('Không tìm thấy biến thể sản phẩm.', 'error');
                        quantityInput.prop('disabled', true).val(1);
                        priceInput.val(0);
                        totalInput.val(0);
                        productDetailIdInput.val('');
                    }
                } else {
                    quantityInput.prop('disabled', true).val(1);
                    priceInput.val(0);
                    totalInput.val(0);
                    productDetailIdInput.val('');
                }
                calculateTotal();
            }

            $(document).on('change', '.product-select', function () {
                let row = $(this).closest('tr');
                let productId = $(this).val();
                loadSizes(productId, row);
                loadColors(null, null, row);
                updateQuantityAndPrice(row);
                checkPromotionEligibility();
            });

            $(document).on('change', '.size-select', function () {
                let row = $(this).closest('tr');
                let productId = row.find('.product-select').val();
                let sizeId = $(this).val();
                loadColors(productId, sizeId, row);
                updateQuantityAndPrice(row);
                checkPromotionEligibility();
            });

            $(document).on('change', '.color-select', function () {
                let row = $(this).closest('tr');
                updateQuantityAndPrice(row);
                checkPromotionEligibility();
            });

            $(document).on('input', '.quantity-input', function () {
                let row = $(this).closest('tr');
                let quantity = parseInt($(this).val()) || 1;
                let price = parseFloat(row.find('.price-input').val()) || 0;
                row.find('.total-input').val(quantity * price);
                calculateTotal();
                checkPromotionEligibility();
            });

            $(document).on('click', '.add-item', function () {
                let row = $(this).closest('tr');
                let productId = row.find('.product-select').val();
                let sizeId = row.find('.size-select').val();
                let colorId = row.find('.color-select').val();
                let quantity = parseInt(row.find('.quantity-input').val()) || 0;
                let price = parseFloat(row.find('.price-input').val()) || 0;
                let productDetailId = row.find('.product-detail-id').val();

                if (!productId || !sizeId || !colorId || !productDetailId) {
                    showToast('Vui lòng chọn đầy đủ sản phẩm, kích thước và màu sắc!', 'error');
                    return;
                }

                if (quantity <= 0) {
                    showToast('Số lượng phải lớn hơn 0!', 'error');
                    return;
                }

                let variant = variants.find(v => v.ProductDetailId == productDetailId);
                if (!variant) {
                    showToast('Biến thể sản phẩm không hợp lệ!', 'error');
                    return;
                }

                if (quantity > (variant.Stock || 0)) {
                    showToast(`Số lượng vượt quá tồn kho (${variant.Stock})!`, 'error');
                    return;
                }

                let productName = variant.ProductName || 'Không xác định';
                let sizeName = variant.SizeName || 'Không xác định';
                let colorName = variant.ColorName || 'Không xác định';
                let subtotal = quantity * price;

                let newRow = `
                    <tr>
                        <td>
                            ${productName}
                            <input type="hidden" name="ProductDetailIds[]" value="${productDetailId}" />
                        </td>
                        <td>${sizeName}</td>
                        <td>${colorName}</td>
                        <td>
                            <input type="hidden" name="Quantities[]" value="${quantity}" />
                            ${quantity}
                        </td>
                        <td>
                            <input type="hidden" name="Prices[]" value="${price}" />
                            ${price.toLocaleString('vi-VN')}
                        </td>
                        <td>
                            <input type="hidden" class="total-input" value="${subtotal}" />
                            ${subtotal.toLocaleString('vi-VN')}
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger remove-item">Xóa</button>
                        </td>
                    </tr>`;
                $('#orderDetailsTable tbody').prepend(newRow);

                row.find('.product-select').val('');
                loadSizes(null, row);
                calculateTotal();
                checkPromotionEligibility();
            });

            $(document).on('click', '.remove-item', function () {
                $(this).closest('tr').remove();
                calculateTotal();
                checkPromotionEligibility();
            });

            $(document).on('click', '.add-new-row', function () {
                let newRow = $('.new-item').clone().removeClass('new-item');
                newRow.find('.add-item').show();
                newRow.find('.remove-row').show();
                newRow.find('.product-select').val('');
                newRow.find('.size-select').html('<option value="">Chọn kích thước</option>').prop('disabled', true);
                newRow.find('.color-select').html('<option value="">Chọn màu sắc</option>').prop('disabled', true);
                newRow.find('.quantity-input').prop('disabled', true).val(1);
                newRow.find('.price-input').val(0);
                newRow.find('.total-input').val(0);
                newRow.find('.product-detail-id').val('');
                $('#orderDetailsTable tbody').append(newRow);
            });

            $(document).on('click', '.remove-row', function () {
                let row = $(this).closest('tr');
                if ($('#orderDetailsTable tbody tr').length > 1) {
                    row.remove();
                    calculateTotal();
                    checkPromotionEligibility();
                } else {
                    showToast('Phải có ít nhất một sản phẩm trong đơn hàng!', 'error');
                }
            });

            $('#orderForm').on('submit', function (e) {
                $('.new-item').remove();
                if ($('#orderDetailsTable tbody tr').length === 0) {
                    e.preventDefault();
                    showToast('Đơn hàng phải có ít nhất một sản phẩm!', 'error');
                }
            });

            // Kiểm tra tính hợp lệ của chương trình khuyến mãi khi tải trang
            checkPromotionEligibility();
            calculateTotal();
        });
    </script>
}