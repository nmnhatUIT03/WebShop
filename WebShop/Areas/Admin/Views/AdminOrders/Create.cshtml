@model WebShop.Models.Order
@{
    ViewData["Title"] = "Thêm đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        background: #FFFFFF;
        font-family: 'Montserrat', sans-serif;
        color: #000000;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: #F8F9FA;
        padding: 20px 0;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .header-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #333;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-size: 0.9rem;
        color: #666;
    }

    .breadcrumb-item {
        color: #666;
        text-decoration: none;
    }

        .breadcrumb-item:hover {
            color: #007BFF;
        }

        .breadcrumb-item.active {
            color: #000;
            font-weight: 500;
        }

    .card {
        background: #FFFFFF;
        border-radius: 8px;
        border: 1px solid #E9ECEF;
        margin-bottom: 20px;
    }

    .card-body {
        padding: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control, .form-select {
        border: 1px solid #CED4DA;
        border-radius: 4px;
        padding: 8px 12px;
        font-size: 0.9rem;
        cursor: pointer !important;
        width: 100%;
        appearance: auto !important;
        -webkit-appearance: auto !important;
        -moz-appearance: auto !important;
    }

        .form-control:focus, .form-select:focus {
            border-color: #007BFF;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
            outline: none;
        }

        .form-select:disabled {
            cursor: not-allowed;
            background-color: #f8f9fa;
            opacity: 0.7;
        }

    .btn {
        padding: 8px 15px;
        border-radius: 4px;
        font-size: 0.9rem;
        cursor: pointer;
    }

    .btn-info {
        background: #007BFF;
        border: none;
        color: #FFF;
    }

        .btn-info:hover {
            background: #0056B3;
        }

    .btn-warning {
        background: #FFC107;
        border: none;
        color: #FFF;
    }

        .btn-warning:hover {
            background: #E0A800;
        }

    .btn-danger {
        background: #DC3545;
        border: none;
        color: #FFF;
    }

        .btn-danger:hover {
            background: #C82333;
        }

    .btn-success {
        background: #28A745;
        border: none;
        color: #FFF;
    }

        .btn-success:hover {
            background: #218838;
        }

    .text-danger {
        color: #DC3545;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .table .form-select, .table .form-control {
        width: 100%;
    }

    .total-money {
        font-size: 1.2rem;
        font-weight: 700;
        color: #333;
    }

    @@media (max-width: 767.98px) {
        .card-body

    {
        padding: 15px;
    }

    .form-control, .form-select {
        font-size: 0.85rem;
    }

    .btn {
        padding: 6px 12px;
        font-size: 0.85rem;
    }

    }
</style>

<div class="page-header">
    <h2 class="header-title">Thêm đơn hàng</h2>
    <nav class="breadcrumb breadcrumb-dash">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminOrders" asp-action="Index">Danh sách đơn hàng</a>
        <span class="breadcrumb-item active">Thêm đơn hàng</span>
    </nav>
</div>

<div class="container">
    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post" id="orderForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CustomerId" class="control-label">Tài khoản</label>
                            <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId">
                                <option value="">Khách vãng lai</option>
                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ReceiverName" class="control-label">Tên người nhận *</label>
                            <input asp-for="ReceiverName" class="form-control" required />
                            <span asp-validation-for="ReceiverName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="OrderDate" class="control-label">Ngày mua *</label>
                            <input asp-for="OrderDate" class="form-control" type="datetime-local" required />
                            <span asp-validation-for="OrderDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ShipDate" class="control-label">Ngày giao hàng</label>
                            <input asp-for="ShipDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="ShipDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TransactStatusId" class="control-label">Trạng thái đơn hàng *</label>
                            <select asp-for="TransactStatusId" class="form-control" asp-items="ViewBag.TransactStatusId" required></select>
                            <span asp-validation-for="TransactStatusId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group" style="display: none;">
                            <label asp-for="PromotionId" class="control-label">Khuyến mãi</label>
                            <select asp-for="PromotionId" class="form-control" asp-items="ViewBag.PromotionId">
                                <option value="">Không chọn</option>
                            </select>
                            <span asp-validation-for="PromotionId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group" style="display: none;">
                            <label asp-for="VoucherId" class="control-label">Voucher</label>
                            <select asp-for="VoucherId" class="form-control" asp-items="ViewBag.VoucherId">
                                <option value="">Không chọn</option>
                            </select>
                            <span asp-validation-for="VoucherId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Paid" class="control-label">Đã thanh toán</label>
                            <input asp-for="Paid" class="form-control" type="checkbox" />
                            <span asp-validation-for="Paid" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PaymentDate" class="control-label">Ngày thanh toán</label>
                            <input asp-for="PaymentDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="PaymentDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Note" class="control-label">Ghi chú</label>
                            <input asp-for="Note" class="form-control" />
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Address" class="control-label">Địa chỉ *</label>
                            <input asp-for="Address" class="form-control" required />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <h4>Chi tiết đơn hàng</h4>
                        <button type="button" class="btn btn-success mb-3 add-new-row">+ Thêm sản phẩm</button>
                        <table class="table table-bordered" id="orderDetailsTable">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Kích thước</th>
                                    <th>Màu sắc</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Thành tiền</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="new-item">
                                    <td>
                                        <select class="form-select product-select" name="newProductId[]">
                                            <option value="">Chọn sản phẩm</option>
                                            @if (ViewBag.Products != null)
                                            {
                                                @foreach (var product in ViewBag.Products as SelectList)
                                                {
                                                    <option value="@product.Value">@product.Text</option>
                                                }
                                            }
                                            else
                                            {
                                                <option value="" disabled>Không có sản phẩm</option>
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <select class="form-select size-select" name="newSizeId[]" disabled>
                                            <option value="">Chọn kích thước</option>
                                        </select>
                                    </td>
                                    <td>
                                        <select class="form-select color-select" name="newColorId[]" disabled>
                                            <option value="">Chọn màu sắc</option>
                                        </select>
                                    </td>
                                    <td>
                                        <input type="number" class="form-control quantity-input" name="newQuantity[]" min="1" value="1" disabled />
                                    </td>
                                    <td>
                                        <input type="number" class="form-control price-input" name="newPrice[]" readonly value="0" />
                                    </td>
                                    <td>
                                        <input type="number" class="form-control total-input" readonly value="0" />
                                    </td>
                                    <td>
                                        <input type="hidden" class="product-detail-id" name="ProductDetailIds[]" value="" />
                                        <button type="button" class="btn btn-info add-item">Thêm</button>
                                        <button type="button" class="btn btn-danger remove-row">Xóa</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="total-money mt-3">
                            Tổng tiền: <span id="totalMoney">0</span> VNĐ
                        </div>
                        <input type="hidden" asp-for="TotalMoney" id="totalMoneyInput" value="0" />
                    </div>
                    <div class="col-md-12 text-center mt-4">
                        <div class="form-group">
                            <button type="submit" class="btn btn-info m-r-5"><i class="far fa-save m-r-5 fa-lg"></i>Lưu</button>
                            <a class="btn btn-warning m-r-5" asp-action="Index"><i class="fas fa-undo m-r-5 fa-lg"></i>Quay lại</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!-- Loại bỏ perfectScrollbar để tránh lỗi -->
    <script>
        $(document).ready(function () {
            console.log('Document ready');

            let variants = [];
            try {
                variants = JSON.parse('@Html.Raw(ViewBag.Variants)') || [];
                console.log('Parsed variants:', variants);
            } catch (e) {
                console.error('Lỗi khi parse variants:', e);
                // Loại bỏ alert lỗi khi tải trang
                variants = [];
            }

            let products = [];
            try {
                products = JSON.parse('@Html.Raw(ViewBag.Products)') || [];
                console.log('Parsed products:', products);
            } catch (e) {
                console.error('Lỗi khi parse products:', e);
                // Loại bỏ alert lỗi khi tải trang
                products = [];
            }

            function showToast(message, type = 'success') {
                alert(message); // Thay bằng thư viện thông báo như toastr nếu cần
            }

            function calculateTotal() {
                let total = 0;
                $('#orderDetailsTable tr:not(.new-item)').each(function () {
                    let subtotal = parseFloat($(this).find('.total-input').val()) || 0;
                    total += subtotal;
                });
                $('#totalMoney').text(total.toLocaleString('vi-VN'));
                $('#totalMoneyInput').val(total);
                console.log('Calculated total:', total);
            }

            function loadSizes(productId, row) {
                if (!productId) {
                    row.find('.size-select').html('<option value="">Chọn kích thước</option>').prop('disabled', true);
                    row.find('.color-select').html('<option value="">Chọn màu sắc</option>').prop('disabled', true);
                    row.find('.quantity-input').prop('disabled', true).val(1);
                    row.find('.price-input').val(0);
                    row.find('.total-input').val(0);
                    row.find('.product-detail-id').val('');
                    calculateTotal();
                    return;
                }

                let uniqueSizes = [...new Map(
                    variants
                        .filter(v => v.ProductId == productId && v.SizeId !== 0 && v.SizeName !== "Không xác định")
                        .map(v => [v.SizeId, { SizeId: v.SizeId, SizeName: v.SizeName }])
                ).values()];

                let sizeSelect = row.find('.size-select');
                if (uniqueSizes.length > 0) {
                    let options = '<option value="">Chọn kích thước</option>';
                    uniqueSizes.forEach(size => {
                        options += `<option value="${size.SizeId}">${size.SizeName}</option>`;
                    });
                    sizeSelect.html(options).prop('disabled', false);
                } else {
                    showToast('Sản phẩm này hiện không có kích thước.', 'error');
                    sizeSelect.html('<option value="">Không có kích thước</option>').prop('disabled', true);
                }
            }

            function loadColors(productId, sizeId, row) {
                if (!productId || !sizeId) {
                    row.find('.color-select').html('<option value="">Chọn màu sắc</option>').prop('disabled', true);
                    row.find('.quantity-input').prop('disabled', true).val(1);
                    row.find('.price-input').val(0);
                    row.find('.total-input').val(0);
                    row.find('.product-detail-id').val('');
                    calculateTotal();
                    return;
                }

                let colors = variants
                    .filter(v => v.ProductId == productId && v.SizeId == sizeId && v.ColorId !== 0 && v.ColorName !== "Không xác định")
                    .map(v => ({ ColorId: v.ColorId, ColorName: v.ColorName }));

                let colorSelect = row.find('.color-select');
                if (colors.length > 0) {
                    let options = '<option value="">Chọn màu sắc</option>';
                    colors.forEach(color => {
                        options += `<option value="${color.ColorId}">${color.ColorName}</option>`;
                    });
                    colorSelect.html(options).prop('disabled', false);
                } else {
                    showToast('Biến thể này hiện không có màu sắc.', 'error');
                    colorSelect.html('<option value="">Không có màu sắc</option>').prop('disabled', true);
                }
            }

            function updateQuantityAndPrice(row) {
                let productId = row.find('.product-select').val();
                let sizeId = row.find('.size-select').val();
                let colorId = row.find('.color-select').val();

                let quantityInput = row.find('.quantity-input');
                let priceInput = row.find('.price-input');
                let totalInput = row.find('.total-input');
                let productDetailIdInput = row.find('.product-detail-id');

                if (productId && sizeId && colorId) {
                    let variant = variants.find(v => v.ProductId == productId && v.SizeId == sizeId && v.ColorId == colorId);
                    if (variant) {
                        quantityInput.prop('disabled', false).val(1);
                        priceInput.val(variant.Price || 0);
                        quantityInput.attr('max', variant.Stock || 0);
                        let quantity = parseInt(quantityInput.val()) || 1;
                        totalInput.val(quantity * (variant.Price || 0));
                        productDetailIdInput.val(variant.ProductDetailId);
                    } else {
                        showToast('Không tìm thấy biến thể sản phẩm.', 'error');
                        quantityInput.prop('disabled', true).val(1);
                        priceInput.val(0);
                        totalInput.val(0);
                        productDetailIdInput.val('');
                    }
                } else {
                    quantityInput.prop('disabled', true).val(1);
                    priceInput.val(0);
                    totalInput.val(0);
                    productDetailIdInput.val('');
                }
                calculateTotal();
            }

            $(document).on('change', '.product-select', function () {
                let row = $(this).closest('tr');
                let productId = $(this).val();
                console.log('Product selected:', productId);
                loadSizes(productId, row);
            });

            $(document).on('change', '.size-select', function () {
                let row = $(this).closest('tr');
                let productId = row.find('.product-select').val();
                let sizeId = $(this).val();
                console.log('Size selected:', sizeId);
                loadColors(productId, sizeId, row);
                updateQuantityAndPrice(row);
            });

            $(document).on('change', '.color-select', function () {
                let row = $(this).closest('tr');
                console.log('Color selected:', $(this).val());
                updateQuantityAndPrice(row);
            });

            $(document).on('input', '.quantity-input', function () {
                let row = $(this).closest('tr');
                let price = parseFloat(row.find('.price-input').val()) || 0;
                let quantity = parseInt($(this).val()) || 1;
                let max = parseInt($(this).attr('max')) || 1;
                if (quantity > max) {
                    $(this).val(max);
                    showToast(`Số lượng tối đa là ${max}.`, 'error');
                    quantity = max;
                }
                row.find('.total-input').val(quantity * price);
                calculateTotal();
            });

            $(document).on('click', '.add-item', function () {
                let row = $(this).closest('tr');
                let productId = row.find('.product-select').val();
                let sizeId = row.find('.size-select').val();
                let colorId = row.find('.color-select').val();
                let quantity = parseInt(row.find('.quantity-input').val());
                let price = parseFloat(row.find('.price-input').val());
                let productDetailId = row.find('.product-detail-id').val();
                let productName = row.find('.product-select option:selected').text();
                let sizeName = row.find('.size-select option:selected').text();
                let colorName = row.find('.color-select option:selected').text();
                let subtotal = quantity * price;

                if (!productId || !sizeId || !colorId || !quantity || quantity <= 0 || !price || !productDetailId) {
                    showToast('Vui lòng điền đầy đủ thông tin sản phẩm.', 'error');
                    return;
                }

                let newRow = `<tr>
                    <td>${productName}<input type="hidden" name="ProductDetailIds[]" value="${productDetailId}"></td>
                    <td>${sizeName}</td>
                    <td>${colorName}</td>
                    <td><input type="hidden" name="Quantities[]" value="${quantity}">${quantity}</td>
                    <td><input type="hidden" name="Prices[]" value="${price}">${price.toLocaleString('vi-VN')}</td>
                    <td><input type="hidden" class="total-input" value="${subtotal}">${subtotal.toLocaleString('vi-VN')}</td>
                    <td><button type="button" class="btn btn-danger remove-item">Xóa</button></td>
                </tr>`;
                $('#orderDetailsTable tbody').prepend(newRow);

                resetRow(row);
                calculateTotal();
                showToast('Thêm sản phẩm thành công!', 'success');
            });

            $(document).on('click', '.remove-item', function () {
                $(this).closest('tr').remove();
                calculateTotal();
                showToast('Đã xóa sản phẩm.', 'success');
            });

            $('.add-new-row').click(function () {
                let newRow = `<tr class="new-item">
                    <td>
                        <select class="form-select product-select" name="newProductId[]">
                            <option value="">Chọn sản phẩm</option>
                            @if (ViewBag.Products != null)
                            {
                                        @foreach (var product in ViewBag.Products as SelectList)
                                        {
                                                    <option value="@product.Value">@product.Text</option>
                                        }
                            }
                            else
                            {
                                        <option value="" disabled>Không có sản phẩm</option>
                            }
                        </select>
                    </td>
                    <td>
                        <select class="form-select size-select" name="newSizeId[]" disabled>
                            <option value="">Chọn kích thước</option>
                        </select>
                    </td>
                    <td>
                        <select class="form-select color-select" name="newColorId[]" disabled>
                            <option value="">Chọn màu sắc</option>
                        </select>
                    </td>
                    <td>
                        <input type="number" class="form-control quantity-input" name="newQuantity[]" min="1" value="1" disabled />
                    </td>
                    <td>
                        <input type="number" class="form-control price-input" name="newPrice[]" readonly value="0" />
                    </td>
                    <td>
                        <input type="number" class="form-control total-input" readonly value="0" />
                    </td>
                    <td>
                        <input type="hidden" class="product-detail-id" name="ProductDetailIds[]" value="" />
                        <button type="button" class="btn btn-info add-item">Thêm</button>
                        <button type="button" class="btn btn-danger remove-row">Xóa</button>
                    </td>
                </tr>`;
                $('#orderDetailsTable tbody').append(newRow);
                showToast('Thêm dòng sản phẩm mới thành công!', 'success');
            });

            $(document).on('click', '.remove-row', function () {
                let rows = $('#orderDetailsTable tr.new-item');
                if (rows.length > 1) {
                    $(this).closest('tr').remove();
                    showToast('Đã xóa dòng nhập liệu.', 'success');
                } else {
                    showToast('Phải có ít nhất một dòng nhập liệu.', 'error');
                }
            });

            function resetRow(row) {
                row.find('.product-select').val('');
                row.find('.size-select').html('<option value="">Chọn kích thước</option>').prop('disabled', true);
                row.find('.color-select').html('<option value="">Chọn màu sắc</option>').prop('disabled', true);
                row.find('.quantity-input').val(1).prop('disabled', true);
                row.find('.price-input').val(0);
                row.find('.total-input').val(0);
                row.find('.product-detail-id').val('');
            }

            $('#orderForm').submit(function (e) {
                e.preventDefault();
                let formData = new FormData(this);

                // Xóa các trường ProductDetailIds[] trống
                let productDetailIds = [];
                formData.getAll('ProductDetailIds[]').forEach(id => {
                    if (id && id !== '') {
                        productDetailIds.push(id);
                    }
                });
                formData.delete('ProductDetailIds[]');
                productDetailIds.forEach(id => formData.append('ProductDetailIds[]', id));

                for (let pair of formData.entries()) {
                    console.log('Form data:', pair[0] + ': ' + pair[1]);
                }

                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        console.log('AJAX success:', response);
                        if (response.success) {
                            alert('Tạo đơn hàng thành công!');
                            window.location.href = response.redirectTo || '/Admin/AdminOrders/Index';
                        } else {
                            alert(response.message || 'Lỗi không xác định.');
                        }
                    },
                    error: function (xhr) {
                        console.log('AJAX error:', xhr.responseJSON);
                        let errorMessage = xhr.responseJSON?.message || 'Lỗi không xác định.';
                        alert(errorMessage);
                    }
                });
            });
        });
    </script>
}