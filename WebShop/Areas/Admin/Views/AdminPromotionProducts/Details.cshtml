@model WebShop.Models.Promotion
@{
    ViewData["Title"] = "Chi tiết chương trình khuyến mãi: " + Model.PromotionName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap');

    body {
        background: #CBD5E0;
        font-family: 'Montserrat', sans-serif;
        color: #1A202C;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
        padding: 30px 20px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    .header-sub-title {
        text-align: center;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        color: #4A5568;
        display: flex;
        justify-content: center;
    }

    .breadcrumb-item {
        color: #4A5568;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item:hover {
            color: #f05a00;
        }

        .breadcrumb-item.active {
            color: #1A202C;
            font-weight: 500;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>';
            margin: 0 10px;
            color: #4A5568;
        }

    .card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 30px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1A202C;
        margin-bottom: 20px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .product-info-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        font-family: 'Montserrat', sans-serif;
    }

        .product-info-table th {
            font-weight: 600;
            color: #1A202C;
            padding: 15px;
            background: #F7FAFC;
            border-bottom: 2px solid #E2E8F0;
            font-size: 0.9rem;
            text-align: left;
        }

        .product-info-table td {
            padding: 15px;
            border-bottom: 1px solid #E2E8F0;
            font-size: 0.9rem;
            color: #2D3748;
            vertical-align: middle;
        }

        .product-info-table tr:hover {
            background: #F7FAFC;
        }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        padding: 8px 12px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        border: none;
        color: #FFFFFF;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn-edit {
        background: linear-gradient(to right, #a8a8a8 0%, #a8a8a8 100%);
    }

        .btn-edit:hover {
            background: linear-gradient(to right, #a8a8a8 0%, #a8a8a8 80%, #9a9a9a 100%);
            box-shadow: 0 6px 20px rgba(168, 168, 168, 0.5);
        }

    .btn-back {
        background: #000000;
    }

        .btn-back:hover {
            background: #333333;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5);
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    .action-buttons {
        display: flex;
        justify-content: flex-start;
        gap: 10px;
        margin-top: 20px;
    }

    @@media (max-width: 767.98px) {
        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 1.3rem;
        }

        .product-info-table th, .product-info-table td {
            font-size: 0.8rem;
            padding: 10px;
        }

        .btn {
            padding: 6px 10px;
            font-size: 0.7rem;
        }
    }

    @@media (max-width: 575.98px) {
        .page-header {
            padding: 20px 0;
        }

        .breadcrumb {
            font-size: 0.8rem;
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1.2rem;
        }

        .product-info-table th, .product-info-table td {
            font-size: 0.75rem;
            padding: 8px;
        }

        .btn {
            padding: 5px 8px;
            font-size: 0.65rem;
        }
    }
</style>

<div class="container">
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a asp-area="Admin" asp-controller="AdminPromotionProducts" asp-action="Index" class="breadcrumb-item">Danh sách chương trình khuyến mãi</a>
                <span class="breadcrumb-item active">Chi tiết chương trình khuyến mãi: @(Model.PromotionName ?? "Chưa xác định")</span>
            </nav>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết chương trình khuyến mãi: @(Model.PromotionName ?? "Chưa xác định")</h4>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên sản phẩm</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.PromotionProducts != null && Model.PromotionProducts.Any())
                        {
                            foreach (var product in Model.PromotionProducts)
                            {
                                <tr>
                                    <td>@product.PromotionProductId</td>
                                    <td>@(product.Product?.ProductName ?? "Chưa xác định")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center">Không có sản phẩm trong chương trình này.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="action-buttons">
                <a class="btn btn-edit" asp-action="Edit" asp-route-id="@Model.PromotionId">
                    <i class="far fa-edit m-r-5"></i>
                    <span>Sửa</span>
                </a>
                <a class="btn btn-back" asp-action="Index">
                    <i class="fas fa-undo m-r-5"></i>
                    <span>Quay lại</span>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
}