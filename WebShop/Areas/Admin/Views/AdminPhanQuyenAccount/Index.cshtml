@model IEnumerable<WebShop.Models.Account>

@{
    int index = 1;
    ViewData["Title"] = "Phân Quyền Tài Khoản Hệ Thống";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap');

    body {
        background: #CBD5E0;
        font-family: 'Montserrat', sans-serif;
        color: #1A202C;
        font-weight: 400;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
        padding: 20px 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    .header-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.8rem;
        font-weight: 500;
        color: #1A202C;
        text-align: center;
    }

    .header-sub-title {
        text-align: center;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        color: #4A5568;
    }

    .breadcrumb-item {
        color: #4A5568;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item:hover {
            color: #f05a00;
        }

        .breadcrumb-item.active {
            color: #1A202C;
            font-weight: 500;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>';
            margin: 0 10px;
            color: #4A5568;
        }

    .card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 30px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Montserrat', sans-serif;
    }

        .table thead th {
            font-size: 0.9rem;
            font-weight: 500;
            color: #1A202C;
            padding: 12px 15px;
            background: #F7FAFC;
            border-bottom: 2px solid #E2E8F0;
            text-align: left;
        }

        .table tbody td {
            font-size: 0.9rem;
            color: #1A202C;
            padding: 12px 15px;
            border-bottom: 1px solid #E2E8F0;
        }

        .table tbody tr:hover {
            background: #F7FAFC;
        }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        padding: 8px 15px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-view {
        background: #f05a00;
        border: none;
        color: #FFFFFF;
    }

        .btn-view:hover {
            background: #d94f00;
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    .btn-edit {
        background: #4A5568;
        border: none;
        color: #FFFFFF;
    }

        .btn-edit:hover {
            background: #2D3748;
            box-shadow: 0 6px 20px rgba(74, 85, 104, 0.5);
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    .d-flex.align-items-center img {
        max-width: 60px;
        border-radius: 8px;
        margin-right: 10px;
    }

    .d-flex.align-items-center h6 {
        font-size: 0.9rem;
        font-weight: 500;
        color: #1A202C;
        margin: 0;
    }

    @@media (max-width: 767.98px) {
        .card-body {
            padding: 20px;
        }

        .table thead th,
        .table tbody td {
            font-size: 0.8rem;
            padding: 10px 12px;
        }

        .btn {
            padding: 6px 12px;
            font-size: 0.7rem;
        }

        .d-flex.align-items-center img {
            max-width: 50px;
        }
    }

    @@media (max-width: 575.98px) {
        .page-header {
            padding: 15px 0;
        }

        .header-title {
            font-size: 1.5rem;
        }

        .breadcrumb {
            font-size: 0.8rem;
        }

        .card-body {
            padding: 15px;
        }

        .table thead th,
        .table tbody td {
            font-size: 0.75rem;
            padding: 8px 10px;
        }

        .btn {
            padding: 6px 10px;
            font-size: 0.65rem;
        }

        .d-flex.align-items-center img {
            max-width: 40px;
        }
    }
</style>

<div class="container">
    <div class="page-header">
        <h2 class="header-title">Phân Quyền Tài Khoản Hệ Thống</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <span class="breadcrumb-item active">Danh sách tài khoản</span>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="header-title text-center">Danh sách nhân viên</h2>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Họ tên</th>
                                    <th>Tên đăng nhập</th>
                                    <th>Điện thoại</th>
                                    <th>Lần đăng nhập cuối</th>
                                    <th>Quyền</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" alt="">
                                                    <h6>@item.FullName</h6>
                                                </div>
                                            </td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td>@item.LastLogin</td>
                                            <td>
                                                @if (item.Role != null)
                                                {
                                                    @item.Role.Description
                                                }
                                                else
                                                {
                                                    <span>Chưa có quyền</span>
                                                }
                                            </td>
                                            <td>
                                                <a class="btn btn-view btn-tone m-r-5" asp-area="Admin" asp-controller="AdminPhanQuyenAccount" asp-action="Details" asp-route-id="@item.AccountId">
                                                    <i class="far fa-eye m-r-5 fa-lg"></i>Xem
                                                </a>
                                                <a class="btn btn-edit btn-tone m-r-5" asp-area="Admin" asp-controller="AdminPhanQuyenAccount" asp-action="Edit" asp-route-id="@item.AccountId">
                                                    <i class="fas fa-user-tag m-r-5 fa-lg"></i>Phân quyền
                                                </a>
                                            </td>
                                        </tr>
                                        index = index + 1;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/perfect-scrollbar/1.5.5/perfect-scrollbar.min.js"></script>
    <script>
        $(document).ready(function () {
            // Khởi tạo perfectScrollbar nếu cần
            try {
                if (typeof $.fn.perfectScrollbar === 'function') {
                    $('.card-body').perfectScrollbar();
                } else {
                    console.warn('perfectScrollbar không được tải.');
                }
            } catch (e) {
                console.error('Lỗi khi khởi tạo perfectScrollbar:', e);
            }
        });
    </script>
}