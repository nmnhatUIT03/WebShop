@model WebShop.Areas.Admin.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập Admin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLoginLayout.cshtml"; // Sử dụng layout riêng nếu cần
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/bootstrap.css">
    <link rel="stylesheet" href="/assets/vendors/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="/assets/css/app.css">
    <link rel="stylesheet" href="/assets/css/pages/auth.css">
</head>

<body>
    <div id="auth" style="background-color: #FAEAEA">
        <div class="row h-100">
            <div class="col-lg-5 col-12" style="margin-left: 31%">
                <div id="auth-left">
                    <div class="auth-logo" style="text-align: center">
                        <a href="/Admin"><img src="~/assets/images/logo/logoadmin.jpg" alt="Logo" style="height: 100px; margin-top: 20%"></a>
                    </div>
                    <div class="card">
                        <div class="card-body mt-3">
                            <form asp-area="Admin" asp-controller="AdminLogin" asp-action="AdminLogin" method="post" id="actionform">
                                <div class="form-group position-relative has-icon-left mb-4">
                                    <input type="text" class="form-control" asp-for="Email" placeholder="Email">
                                    <div class="form-control-icon">
                                        <i class="bi bi-person"></i>
                                    </div>
                                </div>
                                <div class="form-group position-relative has-icon-left mb-4">
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Mật khẩu">
                                    <div class="form-control-icon">
                                        <i class="bi bi-shield-lock"></i>
                                    </div>
                                </div>
                                <div class="form-check form-check-lg d-flex align-items-end">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="flexCheckDefault">
                                    <label class="form-check-label text-gray-600" for="flexCheckDefault">Nhớ mật khẩu</label>
                                </div>
                                <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5" type="submit">Đăng nhập</button>
                            </form>
                        </div>
                    </div>
                    <div class="text-center mt-5 text-lg fs-4">
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                        }
                        <p class="text-gray-600">Bạn chưa có tài khoản? <a class="font-bold" href="/Admin/AdminLogin/AccessDeny">Yêu cầu cấp tài khoản</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>