@model WebShop.Models.Customer
@using System.Globalization

@{
    ViewData["Title"] = "Thông tin khách hàng: " + (Model?.FullName ?? "Không xác định");
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap');

    body {
        background: #CBD5E0;
        font-family: 'Montserrat', sans-serif;
        color: #1A202C;
        font-weight: 400;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
        padding: 20px 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    .header-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.8rem;
        font-weight: 500; /* Reduced from 700 to 500 */
        color: #1A202C;
        text-align: center;
    }

    .header-sub-title {
        text-align: center;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        color: #4A5568;
    }

    .breadcrumb-item {
        color: #4A5568;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item:hover {
            color: #f05a00;
        }

        .breadcrumb-item.active {
            color: #1A202C;
            font-weight: 500;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>';
            margin: 0 10px;
            color: #4A5568;
        }

    .card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 30px;
    }

    .card-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.5rem;
        font-weight: 400; /* Reduced from 600 to 400 */
        color: #1A202C;
        margin-bottom: 20px;
    }

    .category-info-table {
        font-family: 'Montserrat', sans-serif;
    }

        .category-info-table .info-item {
            margin-bottom: 15px;
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .category-info-table .info-label {
            font-weight: 600; /* Reduced from 800 to 600 */
            color: #1A202C;
            margin-bottom: 5px;
            width: 200px;
        }

        .category-info-table .info-value {
            font-size: 0.9rem;
            color: #1A202C;
            font-weight: 400; /* Ensure regular weight */
            flex: 1;
        }

            .category-info-table .info-value img {
                max-width: 100px;
                border-radius: 8px;
            }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        padding: 10px 20px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-success {
        background: #f05a00;
        border: none;
        color: #FFFFFF;
    }

        .btn-success:hover {
            background: #d94f00;
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    @@media (max-width: 767.98px) {
        .card-body {
            padding: 20px;
        }

        .category-info-table .info-value {
            font-size: 0.8rem;
        }

        .category-info-table .info-label {
            width: 100%;
        }

        .btn {
            padding: 8px 15px;
            font-size: 0.7rem;
        }
    }

    @@media (max-width: 575.98px) {
        .page-header {
            padding: 20px 0;
        }

        .header-title {
            font-size: 1.5rem;
        }

        .breadcrumb {
            font-size: 0.8rem;
        }

        .card-body {
            padding: 15px;
        }

        .category-info-table .info-value {
            font-size: 0.75rem;
        }

        .category-info-table .info-label {
            width: 100%;
        }

        .btn {
            padding: 6px 12px;
            font-size: 0.65rem;
        }
    }
</style>

<div class="container">
    <div class="page-header">
        <h2 class="header-title">Thông tin khách hàng: @(Model?.FullName ?? "Không xác định")</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index">Danh sách khách hàng</a>
                <span class="breadcrumb-item active">Thông tin khách hàng: @(Model?.FullName ?? "Không xác định")</span>
            </nav>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thông tin khách hàng</h4>
            <div class="category-info-table">
                <div class="info-item">
                    <div class="info-label">ID:</div>
                    <div class="info-value">@(Model?.CustomerId.ToString() ?? "N/A")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Tên khách hàng:</div>
                    <div class="info-value">@(Model?.FullName ?? "N/A")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Ngày sinh:</div>
                    <div class="info-value">@(Model?.Birthday?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) ?? "N/A")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Avatar:</div>
                    <div class="info-value">
                        @if (!string.IsNullOrEmpty(Model?.Avatar))
                        {
                            <img src="@Model.Avatar" alt="Avatar" class="img-fluid" />
                        }
                        else
                        {
                            <span>N/A</span>
                        }
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-label">Địa chỉ:</div>
                    <div class="info-value">@(Model?.Address ?? "N/A")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Email:</div>
                    <div class="info-value">@(Model?.Email ?? "N/A")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">SĐT:</div>
                    <div class="info-value">@(Model?.Phone ?? "N/A")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Ngày tạo:</div>
                    <div class="info-value">@(Model?.CreateDate?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) ?? "N/A")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Lần đăng nhập cuối:</div>
                    <div class="info-value">@(Model?.LastLogin?.ToString("dd/MM/yyyy HH:mm", CultureInfo.InvariantCulture) ?? "N/A")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Trạng thái:</div>
                    <div class="info-value">@(Model.Active.HasValue && Model.Active.Value ? "Hoạt động" : "Không hoạt động")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Số đơn hàng:</div>
                    <div class="info-value">@(Model?.Orders?.Count ?? 0)</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Số bình luận:</div>
                    <div class="info-value">@(Model?.Comments?.Count ?? 0)</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Số khuyến mãi:</div>
                    <div class="info-value">@(Model?.UserPromotions?.Count ?? 0)</div>
                </div>
            </div>
            <div class="mt-3 text-center">
                <a class="btn btn-success" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index"><i class="fas fa-undo m-r-5"></i>Quay lại</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
}