@model PagedList.Core.IPagedList<WebShop.Models.Customer>
@using System.Globalization
@using PagedList.Core.Mvc

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách khách hàng - Trang " + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap');

    body {
        background: #CBD5E0;
        font-family: 'Montserrat', sans-serif;
        color: #1A202C;
        font-weight: 400;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
        padding: 20px 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    .header-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.8rem;
        font-weight: 500; /* Reduced from 700 to match Details.cshtml */
        color: #1A202C;
        text-align: center;
    }

    .header-sub-title {
        text-align: center;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        color: #4A5568;
    }

    .breadcrumb-item {
        color: #4A5568;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item:hover {
            color: #f05a00;
        }

        .breadcrumb-item.active {
            color: #1A202C;
            font-weight: 500;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>';
            margin: 0 10px;
            color: #4A5568;
        }

    .card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 30px;
    }

    .card-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.5rem;
        font-weight: 400; /* Reduced from default to match Details.cshtml */
        color: #1A202C;
        margin-bottom: 20px;
    }

    .table {
        font-family: 'Montserrat', sans-serif;
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table th {
            font-weight: 600; /* Reduced from 700 to match Details.cshtml */
            color: #1A202C;
            padding: 15px;
            background: #F7FAFC;
            border-bottom: 2px solid #E2E8F0;
        }

        .table td {
            padding: 15px;
            vertical-align: middle;
            border-bottom: 1px solid #E2E8F0;
            color: #2D3748; /* Darker gray for all table cells */
        }

        .table td p {
            color: #000000; /* Black for customer info (FullName, Phone, Email) */
            margin: 0;
            font-weight: 400; /* Regular weight to match Details.cshtml */
        }

        .table td p strong {
            font-weight: 500; /* Slightly bolder for FullName, consistent with Details.cshtml */
        }

        .table tr:hover {
            background: #F7FAFC;
        }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        padding: 8px 15px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-edit {
        background: linear-gradient(to right, #a8a8a8 0%, #a8a8a8 100%);
        border: none;
        color: #FFFFFF;
    }

        .btn-edit:hover {
            background: linear-gradient(to right, #a8a8a8 0%, #a8a8a8 80%, #9a9a9a 100%);
            box-shadow: 0 6px 20px rgba(168, 168, 168, 0.5);
        }

    .btn-success {
        background: #f05a00;
        border: none;
        color: #FFFFFF;
    }

        .btn-success:hover {
            background: #d94f00;
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    .btn-primary {
        background: #000000;
        border: none;
        color: #FFFFFF;
    }

        .btn-primary:hover {
            background: #333333;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5);
        }

    .btn-warning {
        background: #F6AD55;
        border: none;
        color: #FFFFFF;
    }

        .btn-warning:hover {
            background: #ED8936;
            box-shadow: 0 6px 20px rgba(246, 173, 85, 0.5);
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    .pagination {
        font-family: 'Montserrat', sans-serif;
        justify-content: center;
        margin-top: 20px;
    }

        .pagination .page-link {
            color: #1A202C;
            border-radius: 8px;
            margin: 0 5px;
            transition: all 0.3s ease;
        }

            .pagination .page-link:hover {
                background: #f05a00;
                color: #FFFFFF;
                border-color: #f05a00;
            }

        .pagination .active .page-link {
            background: #f05a00;
            border-color: #f05a00;
            color: #FFFFFF;
        }

    .search-form {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }

    .search-input {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        border-radius: 8px;
        border: 1px solid #CBD5E0;
        padding: 10px 15px;
        width: 100%;
        max-width: 300px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .search-input:focus {
            border-color: #f05a00;
            box-shadow: 0 0 8px rgba(240, 90, 0, 0.3);
            outline: none;
        }

    .search-button {
        background: #f05a00;
        border: none;
        color: #FFFFFF;
        padding: 10px 15px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .search-button:hover {
            background: #d94f00;
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    @@media (max-width: 767.98px) {
        .card-body {
            padding: 20px;
        }

        .table th, .table td {
            padding: 10px;
            font-size: 0.8rem;
        }

        .btn {
            padding: 6px 12px;
            font-size: 0.7rem;
        }

        .table .btn {
            padding: 2px 6px;
            height: 26px;
            font-size: 0.7rem;
        }

        .table .btn-primary, .table .btn-warning, .table .btn-success {
            min-width: 35px;
        }

        .search-input {
            font-size: 0.8rem;
            max-width: 200px;
        }
    }

    @@media (max-width: 575.98px) {
        .page-header {
            padding: 15px 0;
        }

        .header-title {
            font-size: 1.5rem;
        }

        .breadcrumb {
            font-size: 0.8rem;
        }

        .card-body {
            padding: 15px;
        }

        .table th, .table td {
            padding: 8px;
            font-size: 0.75rem;
        }

        .table .btn {
            padding: 1px 4px;
            height: 24px;
            font-size: 0.65rem;
        }

        .table .btn-primary, .table .btn-warning, .table .btn-success {
            min-width: 30px;
        }

        .search-input {
            font-size: 0.75rem;
            max-width: 150px;
        }
    }
</style>

<div class="container">
    <div class="page-header">
        <h2 class="header-title">Danh sách khách hàng</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <span class="breadcrumb-item active">Danh sách khách hàng - Trang @CurrentPage</span>
            </nav>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">
                <div class="col-lg-8">
                    <h4 class="card-title">Tổng số: @Model.TotalItemCount khách hàng</h4>
                    <form asp-action="Index" method="get" class="search-form">
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Tìm kiếm khách hàng..." class="search-input" />
                        <button type="submit" class="search-button"><i class="fa fa-search"></i></button>
                    </form>
                </div>
                <div class="col-lg-4 text-right">
                    <a class="btn btn-success" asp-controller="AdminCustomers" asp-action="Create"><i class="far fa-plus-square m-r-5"></i>Thêm khách hàng</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Thông tin khách hàng</th>
                            <th>Địa chỉ</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = (Model.PageNumber - 1) * Model.PageSize + 1;
                        }
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>
                                        <p><strong>@(item.FullName ?? "Chưa xác định")</strong></p>
                                        <p>@(item.Phone ?? "Chưa xác định")</p>
                                        <p>@(item.Email ?? "Chưa xác định")</p>
                                    </td>
                                    <td>@(item.Address ?? "Chưa xác định")</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm m-r-5" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Details" asp-route-id="@item.CustomerId"><i class="far fa-eye"></i></a>
                                        <a class="btn btn-edit btn-sm m-r-5" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Edit" asp-route-id="@item.CustomerId"><i class="far fa-edit"></i></a>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">Không có khách hàng nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div aria-label="Page navigation example">
                    <ul class="pagination">
                        <pager class="page-container" list="@Model" options="@PagedListRenderOptions.Bootstrap4PageNumbersOnly" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" />
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
}