@model WebShop.Models.Customer
@using System.Globalization

@{
    ViewData["Title"] = "Sửa khách hàng: " + (Model?.FullName ?? "Không xác định");
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap');

    body {
        background: #CBD5E0;
        font-family: 'Montserrat', sans-serif;
        color: #1A202C;
        font-weight: 400;
        overflow-x: hidden;
    }

    .container {
        max-width: 1440px;
        padding: 0 20px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #FFFFFF 0%, #CBD5E0 100%);
        padding: 20px 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 30px;
    }

    .header-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.8rem;
        font-weight: 500;
        color: #1A202C;
        text-align: center;
    }

    .header-sub-title {
        text-align: center;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        color: #4A5568;
    }

    .breadcrumb-item {
        color: #4A5568;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item:hover {
            color: #f05a00;
        }

        .breadcrumb-item.active {
            color: #1A202C;
            font-weight: 500;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>';
            margin: 0 10px;
            color: #4A5568;
        }

    .card {
        background: #FFFFFF;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 30px;
    }

    .card-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.5rem;
        font-weight: 400;
        color: #1A202C;
        margin-bottom: 20px;
    }

    .category-info-table {
        font-family: 'Montserrat', sans-serif;
    }

        .category-info-table .info-item {
            margin-bottom: 15px;
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .category-info-table .info-label {
            font-weight: 600;
            color: #1A202C;
            margin-bottom: 5px;
            width: 200px;
        }

        .category-info-table .info-value {
            font-size: 0.9rem;
            color: #1A202C;
            font-weight: 400;
            flex: 1;
        }

            .category-info-table .info-value img {
                max-width: 100px;
                border-radius: 8px;
            }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
        color: #1A202C;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .form-control {
        border-radius: 8px;
        padding: 0.7rem 1rem;
        font-size: 0.9rem;
        font-weight: 400;
        background-color: #F9F9F9;
        border: 1px solid #CBD5E0;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #f05a00;
            background-color: #FFFFFF;
            box-shadow: 0 0 8px rgba(240, 90, 0, 0.3);
            outline: none;
        }

        .form-control::placeholder {
            color: #999999;
            font-weight: 400;
        }

        .form-control.is-invalid {
            border-color: #dc3545;
        }

    .btn {
        font-family: 'Montserrat', sans-serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 8px;
        padding: 10px 20px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-success {
        background: #f05a00;
        border: none;
        color: #FFFFFF;
    }

        .btn-success:hover {
            background: #d94f00;
            box-shadow: 0 6px 20px rgba(240, 90, 0, 0.5);
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    .text-danger {
        font-size: 0.8rem;
        font-weight: 400;
        color: #dc3545;
    }

    @@media (max-width: 767.98px) {
        .card-body {
            padding: 20px;
        }

        .category-info-table .info-value {
            font-size: 0.8rem;
        }

        .category-info-table .info-label {
            width: 100%;
        }

        .form-control {
            font-size: 0.8rem;
        }

        .form-label {
            font-size: 0.8rem;
        }

        .btn {
            padding: 8px 15px;
            font-size: 0.7rem;
        }
    }

    @@media (max-width: 575.98px) {
        .page-header {
            padding: 15px 0;
        }

        .header-title {
            font-size: 1.5rem;
        }

        .breadcrumb {
            font-size: 0.8rem;
        }

        .card-body {
            padding: 15px;
        }

        .category-info-table .info-value {
            font-size: 0.75rem;
        }

        .category-info-table .info-label {
            width: 100%;
        }

        .form-control {
            font-size: 0.75rem;
        }

        .form-label {
            font-size: 0.75rem;
        }

        .btn {
            padding: 6px 12px;
            font-size: 0.65rem;
        }
    }
</style>

<div class="container">
    <form asp-controller="AdminCustomers" asp-action="Edit" asp-route-id="@Model.CustomerId" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CustomerId" />

        <div class="page-header">
            <h2 class="header-title">Sửa khách hàng: @(Model?.FullName ?? "Không xác định")</h2>
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                    <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index">Danh sách khách hàng</a>
                    <span class="breadcrumb-item active">Sửa khách hàng: @(Model?.FullName ?? "Không xác định")</span>
                </nav>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Thông tin khách hàng</h4>
                <div class="category-info-table">
                    <div class="info-item">
                        <div class="info-label">ID:</div>
                        <div class="info-value">@(Model?.CustomerId.ToString() ?? "N/A")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Tên khách hàng:</div>
                        <div class="info-value">
                            <input type="text" class="form-control" asp-for="FullName" placeholder="Nhập họ và tên">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Ngày sinh:</div>
                        <div class="info-value">
                            <input type="date" class="form-control" asp-for="Birthday" placeholder="Chọn ngày sinh">
                            <span asp-validation-for="Birthday" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Avatar:</div>
                        <div class="info-value">
                            @if (!string.IsNullOrEmpty(Model?.Avatar))
                            {
                                <img src="~/@Model.Avatar" alt="Avatar" class="img-fluid" style="max-width: 100px; border-radius: 8px;" />
                            }
                            else
                            {
                                <img src="~/images/default-avatar.png" alt="Default Avatar" class="img-fluid" style="max-width: 100px; border-radius: 8px;" />
                            }
                            <input type="file" class="form-control mt-2" name="AvatarFile" accept=".jpg,.jpeg,.png,.gif">
                            <span class="text-danger" asp-validation-for="Avatar"></span>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Địa chỉ:</div>
                        <div class="info-value">
                            <input type="text" class="form-control" asp-for="Address" placeholder="Nhập địa chỉ">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Email:</div>
                        <div class="info-value">
                            <input type="email" class="form-control" asp-for="Email" placeholder="Nhập email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Số điện thoại:</div>
                        <div class="info-value">
                            <input type="tel" class="form-control" asp-for="Phone" placeholder="Nhập số điện thoại">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Ngày tạo:</div>
                        <div class="info-value">@(Model?.CreateDate?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) ?? "N/A")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Lần đăng nhập cuối:</div>
                        <div class="info-value">@(Model?.LastLogin?.ToString("dd/MM/yyyy HH:mm", CultureInfo.InvariantCulture) ?? "N/A")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Trạng thái:</div>
                        <div class="info-value">
                            <select class="form-control" asp-for="Active">
                                <option value="true">Hoạt động</option>
                                <option value="false">Không hoạt động</option>
                            </select>
                            <span asp-validation-for="Active" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Số đơn hàng:</div>
                        <div class="info-value">@(Model?.Orders?.Count ?? 0)</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Số bình luận:</div>
                        <div class="info-value">@(Model?.Comments?.Count ?? 0)</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Số khuyến mãi:</div>
                        <div class="info-value">@(Model?.UserPromotions?.Count ?? 0)</div>
                    </div>
                </div>
                <div class="mt-3 text-center">
                    <button type="submit" class="btn btn-success m-r-10"><i class="far fa-save m-r-5"></i>Cập nhật</button>
                    <a class="btn btn-success" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index"><i class="fas fa-undo m-r-5"></i>Quay lại</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script>
        $(document).ready(function () {
            // Debug form submit
            $("form").on("submit", function (e) {
                console.log("Form submitted");
                if (!$(this).valid()) {
                    console.log("Form validation failed");
                    e.preventDefault();
                }
            });

            // Khởi tạo jQuery Validation
            $("form").validate({
                rules: {
                    FullName: { required: true },
                    Email: {
                        required: true,
                        email: true,
                        remote: {
                            url: '@Url.Action("ValidateEmail", "AdminCustomers", new { area = "Admin" })',
                            type: "GET",
                            data: {
                                Email: function () { return $("#Email").val(); },
                                CustomerId: '@Model.CustomerId'
                            }
                        }
                    },
                    Phone: {
                        phoneUS: true,
                        remote: {
                            url: '@Url.Action("ValidatePhone", "AdminCustomers", new { area = "Admin" })',
                            type: "GET",
                            data: {
                                Phone: function () { return $("#Phone").val(); },
                                CustomerId: '@Model.CustomerId'
                            }
                        }
                    },
                    Birthday: { date: true },
                    AvatarFile: { accept: "image/*" }
                },
                messages: {
                    FullName: { required: "Họ và tên là bắt buộc" },
                    Email: {
                        required: "Email là bắt buộc",
                        email: "Email không hợp lệ",
                        remote: "Email đã được sử dụng"
                    },
                    Phone: {
                        phoneUS: "Số điện thoại không hợp lệ",
                        remote: "Số điện thoại đã được sử dụng"
                    },
                    Birthday: { date: "Ngày sinh không hợp lệ" },
                    AvatarFile: { accept: "Vui lòng chọn file hình ảnh" }
                },
                errorElement: "span",
                errorClass: "text-danger",
                highlight: function (element) { $(element).addClass("is-invalid"); },
                unhighlight: function (element) { $(element).removeClass("is-invalid"); },
                errorPlacement: function (error, element) { error.insertAfter(element); }
            });

            // Debug AJAX email
            $("#Email").on("blur", function () {
                var email = $(this).val();
                if (email) {
                    console.log("Checking email: " + email);
                    $.ajax({
                        url: '@Url.Action("ValidateEmail", "AdminCustomers", new { area = "Admin" })',
                        type: 'GET',
                        data: { Email: email, CustomerId: '@Model.CustomerId' },
                        success: function (data) {
                            console.log("Email validation response: ", data);
                            if (data !== true) {
                                $("#Email").addClass("is-invalid");
                                $("#Email").next(".text-danger").text(data);
                            } else {
                                $("#Email").removeClass("is-invalid");
                                $("#Email").next(".text-danger").text("");
                            }
                        },
                        error: function (xhr) {
                            console.log("Email validation error: ", xhr.status);
                            $("#Email").addClass("is-invalid");
                            $("#Email").next(".text-danger").text("Lỗi khi kiểm tra email.");
                        }
                    });
                }
            });

            // Debug AJAX phone
            $("#Phone").on("blur", function () {
                var phone = $(this).val();
                if (phone) {
                    console.log("Checking phone: " + phone);
                    $.ajax({
                        url: '@Url.Action("ValidatePhone", "AdminCustomers", new { area = "Admin" })',
                        type: 'GET',
                        data: { Phone: phone, CustomerId: '@Model.CustomerId' },
                        success: function (data) {
                            console.log("Phone validation response: ", data);
                            if (data !== true) {
                                $("#Phone").addClass("is-invalid");
                                $("#Phone").next(".text-danger").text(data);
                            } else {
                                $("#Phone").removeClass("is-invalid");
                                $("#Phone").next(".text-danger").text("");
                            }
                        },
                        error: function (xhr) {
                            console.log("Phone validation error: ", xhr.status);
                            $("#Phone").addClass("is-invalid");
                            $("#Phone").next(".text-danger").text("Lỗi khi kiểm tra số điện thoại.");
                        }
                    });
                }
            });
        });
    </script>
}